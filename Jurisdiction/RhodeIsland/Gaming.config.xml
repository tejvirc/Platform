<!--
*NOTE* When adding or removing elements to this file, you will need to
change the corresponding xsd schema file and generate a new class definition
as follows:

1.  Open a VS2015 command prompt and change to the directory:
    Gaming\Aristocrat.Monaco.Gaming.Contracts
2.  Enter "xsd GamingConfiguration.xsd /c /n:Aristocrat.Monaco.Gaming.Contracts".  This will generate
    the corresponding class definition in csharp (GamingConfiguration.cs).
-->
<GamingConfiguration>
	<GameEnd CashOutStrategy="None" />
	<FreeGames MeterIndependently="false" />
	<Messages ShowMessages="true" />
	<StateChangeOverride DisableStrategy="None" />
	<OperatorMenu DisableDuringGame="true" />
	<LockupBehavior CashableLockupStrategy="ForceCashout" />
	<GameCategory ApplyGameCategorySettings="true" />
	<ContinuousPlaySupport Configurable="true" />
<!--
	GameRestrictions Settings:
		ReturnToPlayerLimits:
			ReturnToPlayer:
				GameType:
					"Any" = Overrides default Min/Max RTP for all game types, unless a game type sets it own Min/Max
					"Slot", "Keno", "Poker"... = Override defaults for specific game type
				Minimum (decimal):
					Default is 0, unless specified
				Maximum (decimal):
					Default is decimal max, unless specified
				IncludeLinkProgressiveIncrementRTP (bool):
					Default is false. If set to true, will include the link progressive increment RTP in the RTP calculation
				IncludeLinkProgressiveStartUpRTP (bool):
					Default is false. If set to true, will include the link progressive startup/reset RTP in the RTP calculation
				IncludeStandaloneProgressiveIncrementRTP (bool):
					Default is true. If set to false, will NOT include the standalone progressive increment RTP in the RTP calculation
				IncludeStandaloneProgressiveStartUpRTP (bool):
					Default is false. If set to true, will include the standalone progressive startup/reset RTP in the RTP calculation
		RestrictedGameTypes:
			Type:
				GameType:
					"Slot", "Keno", "Poker"... = Disable specific game type
-->
	<GameRestrictions>
		<ReturnToPlayerLimits>
			<ReturnToPlayer GameType="Any" Minimum="80.0" Maximum="98.0" />
			<ReturnToPlayer GameType="Slot" Minimum="80.0" Maximum="98.0" />
			<ReturnToPlayer GameType="Poker" Minimum="80.0" Maximum="98.0" />
			<ReturnToPlayer GameType="Blackjack" Minimum="80.0" Maximum="99.1" />
			<ReturnToPlayer GameType="Keno" Minimum="80.0" Maximum="96.0" />
			<ReturnToPlayer GameType="Roulette" Minimum="80.0" Maximum="95.0" />
		</ReturnToPlayerLimits>
	</GameRestrictions>
</GamingConfiguration>