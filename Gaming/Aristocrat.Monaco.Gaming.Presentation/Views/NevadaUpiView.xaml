<UserControl x:Class="Aristocrat.Monaco.Gaming.Presentation.Views.NevadaUpiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:Aristocrat.Monaco.Gaming.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Width="1881"
              AutomationProperties.AutomationId="Grid0_74910100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="317"
                                  AutomationProperties.AutomationId="ColumnDefinition1_74910100" />
            <ColumnDefinition Width="296"
                                  AutomationProperties.AutomationId="ColumnDefinition2_74910100" />
            <ColumnDefinition Width="164"
                                  AutomationProperties.AutomationId="ColumnDefinition3_74910100" />
            <ColumnDefinition Width="*"
                                  AutomationProperties.AutomationId="ColumnDefinition4_74910100" />
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="4"
                   Grid.Column="0"
                   Source="{DynamicResource UpiBackground}"
                   AutomationProperties.AutomationId="Image5_74910100" />
        <Button x:Name="btnCashOut"
                    Grid.Column="0"
                    Margin="45 0 25 0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding Path=CashOutEnabled}"
                    Command="{Binding Path=CashOutCommand}"
                    Style="{StaticResource stlFlatButton}"
                    AutomationProperties.AutomationId="Button6_74910100">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Image Name="cashOutImage"
                               Source="{DynamicResource CashOutNormal}"
                               AutomationProperties.AutomationId="Image7_74910100" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled"
                                     Value="false"
                                     AutomationProperties.AutomationId="Trigger8_74910100">
                            <Setter TargetName="cashOutImage"
                                        Property="Source"
                                        Value="{DynamicResource CashOutDisabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Grid.Column="1"
                   Content="{Binding FormattedCredits}"
                   Margin="0 10 0 0"
                   FontSize="44"
                   FontFamily="Impact"
                   Foreground="White"
                   HorizontalContentAlignment="Center"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   AutomationProperties.AutomationId="Label9_74910100"></Label>
        <Label Grid.Column="2"
                   Content="{Binding ClockTimer.CurrentTime}"
                   Margin="0 30 4 0"
                   FontSize="28"
                   Foreground="Gold"
                   HorizontalContentAlignment="Center"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   AutomationProperties.AutomationId="Label10_74910100"></Label>
        <StackPanel Name="DenomPanel"
                        Grid.Column="3"
                        Orientation="Horizontal"
                        Margin="24 15 0 15"
                        HorizontalAlignment="Left"
                        AutomationProperties.AutomationId="StackPanel11_74910100">
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             Margin="0 0 10 0"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource AllDenom}}"
                             AutomationProperties.AutomationId="RadioButton12_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="AllDenomImage"
                                   Source="{DynamicResource AllDenomOff}"
                                   AutomationProperties.AutomationId="Image13_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger14_74910100">
                                <Setter TargetName="AllDenomImage"
                                            Property="Source"
                                            Value="{DynamicResource AllDenomOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             Margin="0 0 10 0"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource DenomA}}"
                             AutomationProperties.AutomationId="RadioButton15_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="DenomAImage"
                                   Source="{DynamicResource Denom1CentOff}"
                                   AutomationProperties.AutomationId="Image16_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger17_74910100">
                                <Setter TargetName="DenomAImage"
                                            Property="Source"
                                            Value="{DynamicResource Denom1CentOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             Margin="0 0 10 0"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource DenomB}}"
                             AutomationProperties.AutomationId="RadioButton18_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="DenomBImage"
                                   Source="{DynamicResource Denom5CentOff}"
                                   AutomationProperties.AutomationId="Image19_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger20_74910100">
                                <Setter TargetName="DenomBImage"
                                            Property="Source"
                                            Value="{DynamicResource Denom5CentOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource DenomC}}"
                             AutomationProperties.AutomationId="RadioButton21_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="DenomCImage"
                                   Source="{DynamicResource Denom25CentOff}"
                                   AutomationProperties.AutomationId="Image22_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger23_74910100">
                                <Setter TargetName="DenomCImage"
                                            Property="Source"
                                            Value="{DynamicResource Denom25CentOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
        </StackPanel>
    </Grid>

</UserControl>
