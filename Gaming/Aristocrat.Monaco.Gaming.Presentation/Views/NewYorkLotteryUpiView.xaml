<UserControl x:Class="Aristocrat.Monaco.Gaming.Presentation.Views.NewYorkLotteryUpiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:Aristocrat.Monaco.Gaming.Presentation.Views"
             xmlns:controls="clr-namespace:Aristocrat.Monaco.Gaming.UI.Views.Controls;assembly=Aristocrat.Monaco.Gaming.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid x:Name="UpiGrid"
              Width="1881"
              AutomationProperties.AutomationId="Grid134_74910100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".103*"
                                  AutomationProperties.AutomationId="ColumnDefinition135_74910100" />
            <ColumnDefinition Width=".142*"
                                  AutomationProperties.AutomationId="ColumnDefinition136_74910100" />
            <ColumnDefinition Width=".175*"
                                  AutomationProperties.AutomationId="ColumnDefinition137_74910100" />
            <ColumnDefinition Width=".579*"
                                  AutomationProperties.AutomationId="ColumnDefinition138_74910100" />
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="4"
                   Grid.Column="0"
                   Source="{DynamicResource UpiBackground}"
                   AutomationProperties.AutomationId="Image139_74910100" />
        <Label Grid.Column="1"
                   Content="{Binding FormattedCredits}"
                   Margin="0 10 0 0"
                   FontSize="44"
                   FontFamily="Impact"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   AutomationProperties.AutomationId="Label140_74910100" />
        <ContentControl x:Name="CashOutWrapper"
                            Grid.Column="2"
                            controls:MouseEvents.MouseDown="{Binding CashOutWrapperMouseDownCommand}"
                            AutomationProperties.AutomationId="ContentControl141_74910100">
            <Button x:Name="btnCashOut"
                        Margin="35,0,35,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding Path=CashOutEnabled}"
                        Command="{Binding Path=CashOutCommand}"
                        Style="{StaticResource stlFlatButton}"
                        AutomationProperties.AutomationId="Button142_74910100">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image Name="cashOutImage"
                                   Source="{DynamicResource CashOutNormal}"
                                   AutomationProperties.AutomationId="Image143_74910100" />
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding ElementName=btnCashOut, Path=IsEnabled}"
                                             Value="False"
                                             AutomationProperties.AutomationId="DataTrigger144_74910100">
                                <Setter TargetName="cashOutImage"
                                            Property="Source"
                                            Value="{DynamicResource CashOutDisabled}" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </ContentControl>
        <StackPanel x:Name="DenomPanel"
                        Grid.Column="3"
                        Orientation="Horizontal"
                        Margin="0,15,27,15"
                        HorizontalAlignment="Center"
                        controls:MouseEvents.PreviewMouseDown="{Binding UpiPreviewMouseDownCommand}"
                        AutomationProperties.AutomationId="StackPanel145_74910100">
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             Margin="0 0 10 0"
                             Command="{Binding Path=DenomFilterPressedCommand}"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource AllDenom}}"
                             AutomationProperties.AutomationId="RadioButton146_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="AllDenomImage"
                                   Source="{DynamicResource AllDenomOff}"
                                   AutomationProperties.AutomationId="Image147_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger148_74910100">
                                <Setter TargetName="AllDenomImage"
                                            Property="Source"
                                            Value="{DynamicResource AllDenomOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             Command="{Binding Path=DenomFilterPressedCommand}"
                             Margin="0 0 10 0"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource DenomA}}"
                             AutomationProperties.AutomationId="RadioButton149_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="DenomBImage"
                                   Source="{DynamicResource Denom1CentOff}"
                                   AutomationProperties.AutomationId="Image150_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger151_74910100">
                                <Setter TargetName="DenomBImage"
                                            Property="Source"
                                            Value="{DynamicResource Denom1CentOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton Style="{StaticResource stlFlatToggleButton}"
                             Command="{Binding Path=DenomFilterPressedCommand}"
                             IsChecked="{Binding DenomFilter, Converter={StaticResource IntToBool}, ConverterParameter={StaticResource DenomB}}"
                             AutomationProperties.AutomationId="RadioButton152_74910100">
                <RadioButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Image Name="DenomCImage"
                                   Source="{DynamicResource Denom5CentOff}"
                                   AutomationProperties.AutomationId="Image153_74910100" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                         Value="True"
                                         AutomationProperties.AutomationId="Trigger154_74910100">
                                <Setter TargetName="DenomCImage"
                                            Property="Source"
                                            Value="{DynamicResource Denom5CentOn}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
        </StackPanel>
    </Grid>
    
</UserControl>
