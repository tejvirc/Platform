<?xml version="1.0" encoding="utf-8" ?>
<Addin id="GameDirectories" namespace="Client12Addins" version="1.0" >

	<Dependencies>
		<Addin id="Monaco.Kernel" version="1.0" />
	</Dependencies>

	<Extension path="/Kernel/PathMapping">
		<PathMapping platformPath="/Packages" fileSystemPath="..\packages" createIfNotExists="true" absolutePathName="imagesPath" />
		<PathMapping platformPath="/Games" fileSystemPath="..\..\Games" createIfNotExists="true" />
		<PathMapping platformPath="/Runtime" fileSystemPath="..\..\Runtime" createIfNotExists="true" />
		<PathMapping platformPath="/Logs" fileSystemPath="..\logs" createIfNotExists="true" />
	</Extension>

</Addin>