<operatorMenu:OperatorMenuPage x:Class="Aristocrat.Monaco.Gaming.UI.Views.OperatorMenu.BonusMetersPage"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:operatorMenu="clr-namespace:Aristocrat.Monaco.Application.UI.OperatorMenu;assembly=Aristocrat.Monaco.Application.UI"
                               xmlns:viewModels="clr-namespace:Aristocrat.Monaco.Gaming.UI.ViewModels.OperatorMenu"
                               xmlns:lex="http://wpflocalizeextension.codeplex.com"
                               xmlns:loc="http://monaco.aristocrat.com/localization"
                               mc:Ignorable="d"
                               d:DataContext="{d:DesignInstance {x:Type viewModels:BonusMetersPageViewModel}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/OperatorMenu.xaml" />
    </UserControl.Resources>
    <Grid AutomationProperties.AutomationId="Grid0_7F68A5EA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition1_7F68A5EA" />
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition2_7F68A5EA" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"
                              AutomationProperties.AutomationId="ColumnDefinition3_7F68A5EA" />
            <ColumnDefinition Width="Auto"
                              AutomationProperties.AutomationId="ColumnDefinition4_7F68A5EA" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Left"
                AutomationProperties.AutomationId="Border5_7F68A5EA">
            <DataGrid ItemsSource="{Binding EgmPaidBonusAwardsMeters}"
                      x:Name="EgmPaidBonusAwardsGrid"
                      AutoGenerateColumns="False"
                      HorizontalAlignment="Left"
                      IsReadOnly="True"
                      CanUserSortColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      IsHitTestVisible="False"
                      AutomationProperties.AutomationId="DataGrid6_7F68A5EA">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.MachinePaidBonusAwardsLabel}}"
                                        loc:Localizer.For="Operator"
                                        Width="Auto"
                                        Binding="{Binding Name}"
                                        AutomationProperties.AutomationId="DataGridTextColumn7_7F68A5EA" />
                    <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.Value}}"
                                        loc:Localizer.For="Operator"
                                        Width="200"
                                        Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                        HeaderStyle="{StaticResource DataGridColumnHeaderRight}"
                                        CellStyle="{StaticResource DataGridCellRight}"
                                        AutomationProperties.AutomationId="DataGridTextColumn8_7F68A5EA" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,30"
                BorderThickness="0 1 0 0"
                BorderBrush="{StaticResource Brush3}"
                HorizontalAlignment="Left"
                AutomationProperties.AutomationId="Border9_7F68A5EA">
            <Grid Margin="0 10 0 0"
                  AutomationProperties.AutomationId="Grid10_7F68A5EA">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=EgmPaidBonusAwardsGrid, Path=Columns[0].ActualWidth}"
                                      AutomationProperties.AutomationId="ColumnDefinition11_7F68A5EA" />
                    <ColumnDefinition Width="{Binding ElementName=EgmPaidBonusAwardsGrid, Path=Columns[1].ActualWidth}"
                                      AutomationProperties.AutomationId="ColumnDefinition12_7F68A5EA" />
                    <ColumnDefinition Width="{Binding ElementName=EgmPaidBonusAwardsGrid, Path=Columns[2].ActualWidth}"
                                      AutomationProperties.AutomationId="ColumnDefinition13_7F68A5EA" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.MachinePaidBonusTotalLabel}}"
                           Margin="5 0"
                           AutomationProperties.AutomationId="TextBlock14_7F68A5EA" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Right"
                           Margin="5 0"
                           Text="{Binding EgmPaidBonusAwardsTotalAmountFormatted, UpdateSourceTrigger=PropertyChanged}"
                           AutomationProperties.AutomationId="TextBlock15_7F68A5EA" />
            </Grid>
        </Border>
        <Border Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Margin="120,0,0,0"
                AutomationProperties.AutomationId="Border16_7F68A5EA">
            <DataGrid ItemsSource="{Binding HandPaidBonusAwardsMeters}"
                      x:Name="HandPaidBonusAwardsGrid"
                      AutoGenerateColumns="False"
                      HorizontalAlignment="Left"
                      IsReadOnly="True"
                      CanUserSortColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      IsHitTestVisible="False"
                      AutomationProperties.AutomationId="DataGrid17_7F68A5EA">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.AttendantPaidBonusAwardsLabel}}"
                                        loc:Localizer.For="Operator"
                                        Width="Auto"
                                        Binding="{Binding Name}"
                                        AutomationProperties.AutomationId="DataGridTextColumn18_7F68A5EA" />
                    <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.Value}}"
                                        loc:Localizer.For="Operator"
                                        Width="200"
                                        Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                        HeaderStyle="{StaticResource DataGridColumnHeaderRight}"
                                        CellStyle="{StaticResource DataGridCellRight}"
                                        AutomationProperties.AutomationId="DataGridTextColumn19_7F68A5EA" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="120,10,0,30"
                BorderThickness="0 1 0 0"
                BorderBrush="{StaticResource Brush3}"
                HorizontalAlignment="Left"
                AutomationProperties.AutomationId="Border20_7F68A5EA">
            <Grid Margin="0 10 0 0"
                  AutomationProperties.AutomationId="Grid21_7F68A5EA">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=HandPaidBonusAwardsGrid, Path=Columns[0].ActualWidth}"
                                      AutomationProperties.AutomationId="ColumnDefinition22_7F68A5EA" />
                    <ColumnDefinition Width="{Binding ElementName=HandPaidBonusAwardsGrid, Path=Columns[1].ActualWidth}"
                                      AutomationProperties.AutomationId="ColumnDefinition23_7F68A5EA" />
                    <ColumnDefinition Width="{Binding ElementName=HandPaidBonusAwardsGrid, Path=Columns[2].ActualWidth}"
                                      AutomationProperties.AutomationId="ColumnDefinition24_7F68A5EA" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.AttendantPaidBonusTotalLabel}}"
                           Margin="5 0"
                           AutomationProperties.AutomationId="TextBlock25_7F68A5EA" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Right"
                           Margin="5 0"
                           Text="{Binding HandPaidBonusAwardsTotalAmountFormatted, UpdateSourceTrigger=PropertyChanged}"
                           AutomationProperties.AutomationId="TextBlock26_7F68A5EA" />
            </Grid>
        </Border>
    </Grid>
</operatorMenu:OperatorMenuPage>
