<operatorMenu:OperatorMenuPage x:Class="Aristocrat.Monaco.Gaming.UI.Views.OperatorMenu.GamePerformanceMetersView"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:viewModels="clr-namespace:Aristocrat.Monaco.Gaming.UI.ViewModels.OperatorMenu"
                               xmlns:operatorMenu="clr-namespace:Aristocrat.Monaco.Application.UI.OperatorMenu;assembly=Aristocrat.Monaco.Application.UI"
                               xmlns:common="clr-namespace:Aristocrat.Monaco.UI.Common;assembly=Aristocrat.Monaco.UI.Common"
                               xmlns:converters="clr-namespace:Aristocrat.Monaco.Gaming.UI.Converters"
                               xmlns:lex="http://wpflocalizeextension.codeplex.com"
                               xmlns:loc="http://monaco.aristocrat.com/localization"
                               mc:Ignorable="d"
                               common:DialogParticipation.Register="{Binding}"
                               d:DesignHeight="300"
                               d:DesignWidth="300"
                               d:DataContext="{d:DesignInstance {x:Type viewModels:GamePerformanceMetersViewModel}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/OperatorMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ReturnToPlayerConverter x:Key="ReturnToPlayerConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid MaxHeight="560" AutomationProperties.AutomationId="Grid0_A89303F4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" AutomationProperties.AutomationId="ColumnDefinition1_A89303F4" />
            <ColumnDefinition Width="50" AutomationProperties.AutomationId="ColumnDefinition2_A89303F4" />
            <ColumnDefinition Width="Auto" AutomationProperties.AutomationId="ColumnDefinition3_A89303F4" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" AutomationProperties.AutomationId="RowDefinition4_A89303F4" />
            <RowDefinition Height="Auto" AutomationProperties.AutomationId="RowDefinition5_A89303F4" />
            <RowDefinition Height="*" AutomationProperties.AutomationId="RowDefinition6_A89303F4" />
            <RowDefinition Height="Auto" AutomationProperties.AutomationId="RowDefinition7_A89303F4" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="{StaticResource LabelFontSize}"
                   AutomationProperties.AutomationId="TextBlock8_A89303F4">
            <Run Text="{lex:Loc Key={x:Static loc:ResourceKeys.Game}}" AutomationProperties.AutomationId="Run9_A89303F4" />
            <Run Text="#" AutomationProperties.AutomationId="Run10_A89303F4" />
            <Run Text="{Binding GameNumber, Mode=OneWay}" AutomationProperties.AutomationId="Run11_A89303F4" />
            <Run Text=" | " AutomationProperties.AutomationId="Run12_A89303F4" />
            <Run Text="{Binding GameTheme, Mode=OneWay}" AutomationProperties.AutomationId="Run13_A89303F4" />
            <Run Text=" | " AutomationProperties.AutomationId="Run14_A89303F4" />
            <Run Text="{Binding GameDenom, Mode=OneWay, Converter={StaticResource FormattedCurrencyConverter}}" AutomationProperties.AutomationId="Run15_A89303F4" />
            <Run Text=" | " AutomationProperties.AutomationId="Run16_A89303F4" />
            <Run Text="{Binding GamePaytable, Mode=OneWay}" AutomationProperties.AutomationId="Run17_A89303F4" />
        </TextBlock>
        <TextBlock Grid.Column="2"
                   Grid.Row="1"
                   Margin="0 10 0 0"
                   Text="{lex:Loc Key={x:Static loc:ResourceKeys.WagerCategoryTitle}}"
                   FontWeight="Bold"
                   Foreground="{StaticResource Brush3}"
                   AutomationProperties.AutomationId="TextBlock18_A89303F4" />
        <DataGrid Grid.Column="0"
                  Grid.Row="2"
                  ItemsSource="{Binding MetersLeftColumn}"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  AutomationProperties.AutomationId="DataGrid19_A89303F4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.Meter}}"
                                    loc:Localizer.For="Operator"
                                    HeaderStyle="{StaticResource MonacoDataGridWrappedColumnHeader}"
                                    Binding="{Binding Name}"
                                    AutomationProperties.AutomationId="DataGridTextColumn20_A89303F4" />
                <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.Value}}"
                                    loc:Localizer.For="Operator"
                                    Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderRight}"
                                    CellStyle="{StaticResource DataGridCellRight}"
                                    AutomationProperties.AutomationId="DataGridTextColumn21_A89303F4" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Column="2"
                  Grid.Row="2"
                  ItemsSource="{Binding WagerCategoryMeters}"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  AutomationProperties.AutomationId="DataGrid22_A89303F4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#"
                                    loc:Localizer.For="Operator"
                                    HeaderStyle="{StaticResource MonacoDataGridWrappedColumnHeader}"
                                    Binding="{Binding Id}"
                                    AutomationProperties.AutomationId="DataGridTextColumn23_A89303F4" />
                <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.RTP}}"
                                    loc:Localizer.For="Operator"
                                    HeaderStyle="{StaticResource MonacoDataGridWrappedColumnHeader}"
                                    Binding="{Binding RTP, Converter={StaticResource ReturnToPlayerConverter}}"
                                    AutomationProperties.AutomationId="DataGridTextColumn24_A89303F4" />
                <DataGridTextColumn Header="{lex:Loc Key={x:Static loc:ResourceKeys.Wagered}}"
                                    loc:Localizer.For="Operator"
                                    HeaderStyle="{StaticResource MonacoDataGridWrappedColumnHeader}"
                                    Binding="{Binding Wagered, Converter={StaticResource FormattedCurrencyConverter}}"
                                    AutomationProperties.AutomationId="DataGridTextColumn25_A89303F4" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="2"
                    Grid.Row="3"
                    Margin="0 10 0 0"
                    AutomationProperties.AutomationId="StackPanel26_A89303F4">
            <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.WagerCategoryWeightedAvgCaption}}"
                       Foreground="{StaticResource Brush3}"
                       FontWeight="Bold"
                       AutomationProperties.AutomationId="TextBlock27_A89303F4" />
            <TextBlock Margin="0 10 0 0"
                       Text="{Binding GameTheoreticalWeightedRTP, Converter={StaticResource ReturnToPlayerConverter}}"
                       AutomationProperties.AutomationId="TextBlock28_A89303F4" />
        </StackPanel>
    </Grid>
</operatorMenu:OperatorMenuPage>