<UserControl x:Class="Aristocrat.Monaco.Gaming.UI.Views.ButtonDeck.VbdMalfunctionOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="http://monaco.aristocrat.com/localization"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:controls="clr-namespace:Aristocrat.Monaco.Gaming.UI.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent" IsHitTestVisible="False">
        <controls:TextPath HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"
                               Text="{lex:Loc Key={x:Static loc:ResourceKeys.MalfunctionVoids}}" Fill="#FFAFAFAF" 
                               FontStretch = "Condensed" FontFamily="Arial Black" FontSize="20" FontWeight="UltraBold"
                               Stroke="Black" StrokeLineJoin="Round"
                               StrokeThickness="1.4">
        </controls:TextPath>

    </Grid>
</UserControl>
