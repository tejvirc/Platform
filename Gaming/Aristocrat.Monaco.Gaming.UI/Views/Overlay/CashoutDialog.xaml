<UserControl x:Class="Aristocrat.Monaco.Gaming.UI.Views.Overlay.CashoutDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aristocrat.Monaco.Gaming.UI.Views.Overlay"
             xmlns:converters="http://monaco.aristocrat.com/common"
             xmlns:controls="clr-namespace:Aristocrat.Monaco.Gaming.UI.Views.Controls"
             xmlns:gamingConverters="clr-namespace:Aristocrat.Monaco.Gaming.UI.Converters"
             xmlns:viewmodels="clr-namespace:Aristocrat.Monaco.Gaming.UI.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type viewmodels:CashoutDialogViewModel}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             AutomationProperties.AutomationId="UserControl1_4AC9E16A">
    <UserControl.Background>
        <SolidColorBrush x:Name="backgroundColor"  Color="Black" Opacity=".35" AutomationProperties.AutomationId="SolidColorBrush1_4AC9E16A"/>
    </UserControl.Background>
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Apply MahApps.Metro styles to all controls -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/Controls.Button.xaml" />
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/Converters.xaml" />
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="../../Skins/Styles.xaml" />
                <!-- Accent and AppTheme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <gamingConverters:ScaleConverter x:Key="ScaleConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" AutomationProperties.AutomationId="Viewbox2_4AC9E16A">
        <Grid x:Name="ViewInjectionRoot" Width="auto" Height="auto" AutomationProperties.AutomationId="Grid1_4AC9E16A">
            <Image x:Name="BackgroundImage"
               Stretch="uniform"
               converters:ImageHelper.SourceResourceKey="HandPayImage"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               Visibility="Visible"
               AutomationProperties.AutomationId="Image1_4AC9E16A"/>
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" AutomationProperties.AutomationId="Viewbox1_4AC9E16A">
                <Viewbox.Style>
                    <Style TargetType="Viewbox">
                        <Setter Property="Stretch" Value="Uniform"/>
                        <Setter Property="Height" Value="{Binding ElementName=BackgroundImage, Path=ActualHeight, Converter={StaticResource ScaleConverter}, ConverterParameter=0.4}"/>
                        <Setter Property="Width" Value="{Binding ElementName=BackgroundImage, Path=ActualWidth, Converter={StaticResource ScaleConverter}, ConverterParameter=0.75}"/>
                    </Style>
                </Viewbox.Style>
                <Grid AutomationProperties.AutomationId="Grid2_4AC9E16A">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" AutomationProperties.AutomationId="RowDefinition1_4AC9E16A"/>
                        <RowDefinition Height="100" AutomationProperties.AutomationId="RowDefinition2_4AC9E16A"/>
                    </Grid.RowDefinitions>
                    <controls:TextPath 
                            HorizontalAlignment="Center"  
                            VerticalAlignment="Center"
                            Grid.Row="0" 
                            FontSize="14" FontFamily="Arial" FontWeight="ExtraBold" 
                            Fill="Gold" Stroke="Black" StrokeThickness="0.3"
                            Text="{Binding HandCountAmount, StringFormat= 'INSUFFICIENT HAND COUNT TO COLLECT THE FULL AMOUNT. COLLECT $\{0\}?'}"/>
                    <Button  x:Name="btnYes" Grid.Row="1"
                             Content="Yes"
                             FontSize="14"
                             Margin="-100 -70 0 0"
                             Height="66"
                             Width="95"
                             FontStyle="Normal"
                             FontWeight="Bold"
                             FontFamily="Arial"
                             Foreground="Gold"
                             VerticalAlignment="Center" HorizontalAlignment="Center"
                             Style="{StaticResource stlFlatButton}"
                             Command="{Binding CashoutDialogYesNoCommand}"
                             CommandParameter="yes"
                             AutomationProperties.AutomationId="Button1_4AC9E16A">
                        <Button.Background>
                            <ImageBrush Stretch="Fill" ImageSource="{DynamicResource CashOutButtonFrame}" AutomationProperties.AutomationId="ImageBrush1_4AC9E16A"/>
                        </Button.Background>
                    </Button>
                    <Button  x:Name="btnNo" Grid.Row="1" 
                             Content="No"
                             FontSize="14"
                             Margin="100 -70 0 0"
                             Height="66"
                             Width="95"
                             FontStyle="Normal"
                             FontWeight="Bold"
                             FontFamily="Arial"
                             Foreground="Gold"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Center"
                             Command="{Binding CashoutDialogYesNoCommand}"
                             CommandParameter="no"
                             Style="{StaticResource stlFlatButton}"
                             AutomationProperties.AutomationId="Button2_4AC9E16A">
                        <Button.Background>
                            <ImageBrush Stretch="Fill" ImageSource="{DynamicResource CashOutButtonFrame}" AutomationProperties.AutomationId="ImageBrush2_4AC9E16A"/>
                        </Button.Background>
                    </Button>
                </Grid>
            </Viewbox>
        </Grid>
    </Viewbox>
</UserControl>
