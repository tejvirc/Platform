<Addin id="FakeCommunicatorDriver" namespace="Client12Addins" version="1.0">

  <Runtime>
    <Import assembly="Aristocrat.Monaco.Hardware.Fake.dll" />
    <Import assembly="Aristocrat.Monaco.Hardware.Contracts.dll" />
  </Runtime>

  <Dependencies>
    <Addin id="Monaco.Hardware" version="1.0" />
  </Dependencies>

  <Extension path="/Hardware/CommunicatorDrivers">
    <DeviceImplementation ProtocolName="Fake" type="Aristocrat.Monaco.Hardware.Fake.FakeHarkeyCommunicator" />
    <DeviceImplementation ProtocolName="RelmSim" type="Aristocrat.Monaco.Hardware.Fake.FakeRelmCommunicator" />
  </Extension>
  <Extension path="/Hardware/IdReader/IdReaderImplementations">
    <DeviceImplementation ProtocolName="Fake" type="Aristocrat.Monaco.Hardware.Fake.FakeIdReaderAdapter" />
  </Extension>
  <Extension path="/Hardware/ReelController/ReelControllerImplementations">
    <DeviceImplementation ProtocolName="Fake" type="Aristocrat.Monaco.Hardware.Fake.FakeHarkeyReelController" />
  </Extension>
</Addin>