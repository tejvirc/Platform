<common:BaseWindow x:Class="Aristocrat.Monaco.Application.UI.Input.SerialTouchCalibrationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="http://monaco.aristocrat.com/common"
             xmlns:input="clr-namespace:Aristocrat.Monaco.Application.UI.Input"
             mc:Ignorable="d" 
             BorderThickness="0" WindowStyle="None" ResizeMode="NoResize" Background="White"
             d:DataContext="{d:DesignInstance input:SerialTouchCalibrationViewModel}">
    <Grid x:Name="ContentView">
        <Viewbox Stretch="None"> 
            <Grid VerticalAlignment="Center"> 
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />                    
                </Grid.RowDefinitions>
                <Label x:Name="Status" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,10,0,0"/>
                <Label x:Name="Error" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,10,0,0"/>
            </Grid>
        </Viewbox>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Viewbox Width="50" Height="50" Margin="{Binding LeftCrossHairMargin}">
                <Grid>
                    <Ellipse x:Name="CrosshairLowerLeftOuterEllipse" Width="50" Height="50" Stroke="Black" StrokeThickness="4" />
                    <Ellipse x:Name="CrosshairLowerLeftInnerEllipse" Width="25" Height="25" Stroke="Black" StrokeThickness="4" />
                    <Line x:Name="CrosshairLowerLeftCrosshair1" X1="0" Y1="0" X2="50" Y2="50" Stroke="Black" StrokeThickness="4" />
                    <Line x:Name="CrosshairLowerLeftCrosshair2" X1="0" Y1="50" X2="50" Y2="0" Stroke="Black" StrokeThickness="4" />
                </Grid>
            </Viewbox>
        </Grid>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top">
            <Viewbox Width="50" Height="50" Margin="{Binding RightCrossHairMargin}">
                <Grid>
                    <Ellipse x:Name="CrosshairUpperRightOuterEllipse" Width="50" Height="50" Stroke="Black" StrokeThickness="4" />
                    <Ellipse x:Name="CrosshairUpperRightInnerEllipse" Width="25" Height="25" Stroke="Black" StrokeThickness="4" />
                    <Line x:Name="CrosshairUpperRightCrosshair1" X1="0" Y1="0" X2="50" Y2="50" Stroke="Black" StrokeThickness="4" />
                    <Line x:Name="CrosshairUpperRightCrosshair2" X1="0" Y1="50" X2="50" Y2="0" Stroke="Black" StrokeThickness="4" />
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</common:BaseWindow>

