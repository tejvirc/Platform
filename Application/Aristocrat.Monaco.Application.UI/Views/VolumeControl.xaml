        AutomationProperties.AutomationId="StackPanel1_4F68A399">
        <Label
            VerticalAlignment="Center"
            Content="{lex:Loc Key={x:Static loc:ResourceKeys.MasterSoundVolumeLabel}}"
            AutomationProperties.AutomationId="Label2_4F68A399" />
        <ComboBox
            MinWidth="250"
            ItemsSource="{Binding VolumeOptions}"
            SelectedValue="{Binding SelectedVolumeLevel}"
            IsEnabled="{Binding Path=CanEditVolume}"
            DisplayMemberPath="DisplayString"
            AutomationProperties.AutomationId="ComboBox3_4F68A399" />
    </StackPanel>
</UserControl>