                                                 Value=""
                                                 AutomationProperties.AutomationId="DataTrigger39_B32EFF41">
                                        <Setter Property="Text"
                                                Value="{lex:BLoc Key={x:Static loc:ResourceKeys.NotAvailable}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Text"
