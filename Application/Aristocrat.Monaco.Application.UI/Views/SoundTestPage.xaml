<UserControl x:Class="Aristocrat.Monaco.Application.UI.Views.SoundTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Aristocrat.Monaco.Application.UI.ViewModels"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:loc="http://monaco.aristocrat.com/localization"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:common="http://monaco.aristocrat.com/common"
             xmlns:audio="clr-namespace:Aristocrat.Monaco.Hardware.Contracts.Audio;assembly=Aristocrat.Monaco.Hardware.Contracts"
             mc:Ignorable="d"
             Height="Auto"
             Width="Auto"
             d:DataContext="{d:DesignInstance {x:Type viewModels:SoundTestPageViewModel}}"
             AutomationProperties.AutomationId="UserControl0_9A0249AD">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/OperatorMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="SoundButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource MonacoButton1}">
                <Setter Property="Margin"
                        Value="20 0 0 0" />
                <Setter Property="Height"
                        Value="40" />
                <Setter Property="Width"
                        Value="40" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style TargetType="TextBlock"
                   BasedOn="{StaticResource MonacoTextBlock}">
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="Foreground"
                        Value="White" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled"
                             Value="False"
                             AutomationProperties.AutomationId="Trigger1_9A0249AD">
                        <Setter Property="Opacity"
                                Value=".1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="OptionComboStyle"
                   TargetType="ComboBox"
                   BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Padding"
                        Value="5" />
                <Setter Property="MinWidth"
                        Value="150" />
                <Setter Property="IsEnabled">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource BoolAndConverter}">
                            <Binding Path="IsAudioDisabled"
                                     Converter="{StaticResource InverseBoolConverter}" />
                            <Binding Path="IsPlaying"
                                     Converter="{StaticResource InverseBoolConverter}" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="SpeakerButtonStyle"
                   TargetType="Button">
                <Setter Property="Foreground">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint=".5,1"
                                             EndPoint=".5,0"
                                             AutomationProperties.AutomationId="LinearGradientBrush2_9A0249AD">
                            <GradientStop Color="{StaticResource Gray5}"
                                          Offset="0"
                                          AutomationProperties.AutomationId="GradientStop3_9A0249AD" />
                            <GradientStop Color="{StaticResource WhiteColor}"
                                          Offset=".5"
                                          AutomationProperties.AutomationId="GradientStop4_9A0249AD" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Opacity"
                        Value="1" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="IsEnabled">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource BoolAndConverter}">
                            <Binding Path="IsAudioDisabled"
                                     Converter="{StaticResource InverseBoolConverter}" />
                            <Binding Path="IsPlaying"
                                     Converter="{StaticResource InverseBoolConverter}" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontSize"
                        Value="13" />
                <Style.Triggers>
                    <Trigger Property="IsEnabled"
                             Value="False"
                             AutomationProperties.AutomationId="Trigger5_9A0249AD">
                        <Setter Property="Opacity"
                                Value=".1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                AutomationProperties.AutomationId="StackPanel6_9A0249AD">
        <Label Content="{lex:Loc Key={x:Static loc:ResourceKeys.SampleSoundTest}}"
               AutomationProperties.AutomationId="Label7_9A0249AD" />
        <StackPanel Orientation="Horizontal"
                    AutomationProperties.AutomationId="StackPanel8_9A0249AD">
            <ComboBox ItemsSource="{Binding SoundFiles}"
                      DisplayMemberPath="Description"
                      SelectedIndex="0"
                      SelectedItem="{Binding Sound}"
                      Style="{StaticResource OptionComboStyle}"
                      AutomationProperties.AutomationId="ComboBox9_9A0249AD" />
            <Button Content="{iconPacks:PackIconMaterial Kind=Play, Width=10, Height=10}"
                    Name="PlayButton"
                    Command="{Binding PlayCommand}"
                    AutomationProperties.AutomationId="Button10_9A0249AD">
                <Button.Style>
                    <Style TargetType="Button"
                           BasedOn="{StaticResource SoundButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAudioDisabled}"
                                         Value="True"
                                         AutomationProperties.AutomationId="DataTrigger11_9A0249AD">
                                <Setter Property="ToolTip"
                                        Value="{lex:BLoc Key={x:Static loc:ResourceKeys.ServiceNotAvailableText}}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="{iconPacks:PackIconMaterial Kind=Stop, Width=10, Height=10}"
                    Name="StopButton"
                    Command="{Binding StopCommand}"
                    Style="{StaticResource SoundButtonStyle}"
                    RenderTransformOrigin="1.48,0.567"
                    AutomationProperties.AutomationId="Button12_9A0249AD" />
        </StackPanel>
        <Label HorizontalAlignment="Left"
               Margin="0 20 0 0"
               Content="{lex:Loc Key={x:Static loc:ResourceKeys.SoundVolumeTest}}"
               AutomationProperties.AutomationId="Label13_9A0249AD" />
        <ComboBox ItemsSource="{common:Enumeration {x:Type audio:VolumeLevel}}"
                  Name="SoundLevelComboBox"
                  SelectedIndex="0"
                  DisplayMemberPath="Description"
                  SelectedValuePath="Value"
                  SelectedValue="{Binding SoundLevel}"
                  Style="{StaticResource OptionComboStyle}"
                  AutomationProperties.AutomationId="ComboBox14_9A0249AD" />
        <Label HorizontalAlignment="Left"
               Margin="0 20 0 0"
               Content="{lex:Loc Key={x:Static loc:ResourceKeys.SoundSpeakerTest}}"
               AutomationProperties.AutomationId="Label15_9A0249AD" />
        <GroupBox HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  MinWidth="400"
                  MinHeight="400"
                  Margin="0 5 0 0"
                  AutomationProperties.AutomationId="GroupBox16_9A0249AD">
            <Grid Margin="5 0 "
                  AutomationProperties.AutomationId="Grid17_9A0249AD">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"
                                   AutomationProperties.AutomationId="RowDefinition18_9A0249AD" />
                    <RowDefinition Height="*"
                                   AutomationProperties.AutomationId="RowDefinition19_9A0249AD" />
                    <RowDefinition Height="*"
                                   AutomationProperties.AutomationId="RowDefinition20_9A0249AD" />
                    <RowDefinition Height="*"
                                   AutomationProperties.AutomationId="RowDefinition21_9A0249AD" />
                    <RowDefinition Height="*"
                                   AutomationProperties.AutomationId="RowDefinition22_9A0249AD" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      AutomationProperties.AutomationId="ColumnDefinition23_9A0249AD" />
                    <ColumnDefinition Width="*"
                                      AutomationProperties.AutomationId="ColumnDefinition24_9A0249AD" />
                    <ColumnDefinition Width="*"
                                      AutomationProperties.AutomationId="ColumnDefinition25_9A0249AD" />
                    <ColumnDefinition Width="*"
                                      AutomationProperties.AutomationId="ColumnDefinition26_9A0249AD" />
                    <ColumnDefinition Width="*"
                                      AutomationProperties.AutomationId="ColumnDefinition27_9A0249AD" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            IsEnabled="{Binding FrontLeftSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel28_9A0249AD">
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.FrontLeftText}}"
                               AutomationProperties.AutomationId="TextBlock29_9A0249AD" />
                    <Button Command="{Binding PlayCommandOnFrontLeftSpeaker}"
                            CommandParameter="{DynamicResource FrontLeft}"
                            Name="FrontLeftSpeakerButton"
                            AutomationProperties.AutomationId="Button30_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border31_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="90"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="2"
                            IsEnabled="{Binding CenterSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel32_9A0249AD">
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.CenterText}}"
                               AutomationProperties.AutomationId="TextBlock33_9A0249AD" />
                    <Button Command="{Binding PlayCommandOnCenterSpeaker}"
                            CommandParameter="{DynamicResource Center}"
                            Name="CenterSpeakerButton"
                            AutomationProperties.AutomationId="Button34_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border35_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="90"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="3"
                            IsEnabled="{Binding FrontRightSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel36_9A0249AD">
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.FrontRightText}}"
                               AutomationProperties.AutomationId="TextBlock37_9A0249AD" />
                    <Button Command="{Binding PlayCommandOnFrontRightSpeaker}"
                            CommandParameter="{DynamicResource FrontRight}"
                            Name="FrontRightSpeakerButton"
                            AutomationProperties.AutomationId="Button38_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border39_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="90"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="2"
                            Grid.Column="0"
                            IsEnabled="{Binding SideLeftSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel40_9A0249AD">
                    <Button Command="{Binding PlayCommandOnSideLeftSpeaker}"
                            CommandParameter="{DynamicResource SideLeft}"
                            Name="SideLeftSpeakerButton"
                            AutomationProperties.AutomationId="Button41_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border42_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="0"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.SideLeftText}}"
                               AutomationProperties.AutomationId="TextBlock43_9A0249AD" />
                </StackPanel>
                <StackPanel Grid.Row="2"
                            Grid.Column="4"
                            IsEnabled="{Binding SideRightSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel44_9A0249AD">
                    <Button Command="{Binding PlayCommandOnSideRightSpeaker}"
                            CommandParameter="{DynamicResource SideRight}"
                            Name="SideRightSpeakerButton"
                            AutomationProperties.AutomationId="Button45_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border46_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="180"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.SideRightText}}"
                               AutomationProperties.AutomationId="TextBlock47_9A0249AD" />
                </StackPanel>
                <Button Grid.Row="3"
                        Grid.Column="2"
                        Name="LowFrequencySpeakerButton"
                        IsEnabled="{Binding LowFrequencySpeaker, Mode=TwoWay}"
                        Command="{Binding PlayCommandOnLowFrequencySpeaker}"
                        Content="{lex:Loc Key={x:Static loc:ResourceKeys.LowFrequencyText}}"
                        CommandParameter="{DynamicResource LowFrequency}"
                        Width="35"
                        Height="20"
                        MinWidth="0"
                        MinHeight="0"
                        Padding="0"
                        ScrollViewer.CanContentScroll="True"
                        Margin="0"
                        Grid.IsSharedSizeScope="True"
                        AutomationProperties.AutomationId="Button48_9A0249AD" />
                <StackPanel Grid.Row="4"
                            Grid.Column="1"
                            IsEnabled="{Binding RearLeftSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel49_9A0249AD">
                    <Button Command="{Binding PlayCommandOnRearLeftSpeaker}"
                            CommandParameter="{DynamicResource RearLeft}"
                            Name="RearLeftSpeakerButton"
                            AutomationProperties.AutomationId="Button50_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border51_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="270"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.RearLeftText}}"
                               AutomationProperties.AutomationId="TextBlock52_9A0249AD" />
                </StackPanel>
                <StackPanel Grid.Row="4"
                            Grid.Column="3"
                            IsEnabled="{Binding RearRightSpeaker, Mode=TwoWay}"
                            AutomationProperties.AutomationId="StackPanel53_9A0249AD">
                    <Button Command="{Binding PlayCommandOnRearRightSpeaker}"
                            CommandParameter="{DynamicResource RearRight}"
                            Name="RearRightSpeakerButton"
                            AutomationProperties.AutomationId="Button54_9A0249AD">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource SpeakerButtonStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AutomationId="Border55_9A0249AD">
                                                <iconPacks:PackIconFontAwesome FontSize="6"
                                                                               Kind="VolumeUp"
                                                                               Height="40"
                                                                               Rotation="270"
                                                                               Width="40" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="{lex:Loc Key={x:Static loc:ResourceKeys.RearRightText}}"
                               AutomationProperties.AutomationId="TextBlock56_9A0249AD" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </StackPanel>
</UserControl>