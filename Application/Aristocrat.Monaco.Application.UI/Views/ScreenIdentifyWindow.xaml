<common:BaseWindow x:Class="Aristocrat.Monaco.Application.UI.Views.ScreenIdentifyWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:common="http://monaco.aristocrat.com/common"
                   Opacity="0.5"
                   mc:Ignorable="d"
                   BorderThickness="0"
                   WindowStyle="None"
                   ResizeMode="NoResize"
                   d:DesignWidth="1920"
                   d:DesignHeight="1080"
                   x:Name="WindowRoot">
    <Grid x:Name="ContentView"
          AutomationProperties.AutomationId="Grid0_B5933255">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"
                              AutomationProperties.AutomationId="ColumnDefinition1_B5933255" />
            <ColumnDefinition Width="*"
                              AutomationProperties.AutomationId="ColumnDefinition2_B5933255" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition3_B5933255" />
            <RowDefinition Height="*"
                           AutomationProperties.AutomationId="RowDefinition4_B5933255" />
        </Grid.RowDefinitions>
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding FlashWindow, ElementName=WindowRoot}"
                                 Value="true"
                                 AutomationProperties.AutomationId="DataTrigger5_B5933255">
                        <DataTrigger.Setters>
                            <Setter Property="Background"
                                    Value="Green" />
                        </DataTrigger.Setters>
                        <DataTrigger.EnterActions>
                            <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard6_B5933255">
                                <Storyboard AutomationProperties.AutomationId="Storyboard7_B5933255">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.5"
                                                     To="0.9"
                                                     AutoReverse="True"
                                                     RepeatBehavior="Forever"
                                                     Duration="0:0:0.5"
                                                     AutomationProperties.AutomationId="DoubleAnimation8_B5933255" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid x:Name="LabelLeftSpacer"
              Grid.Column="0"
              Grid.Row="0"
              Grid.RowSpan="2"
              AutomationProperties.AutomationId="Grid9_B5933255" />
        <Grid x:Name="LabelTopSpacer"
              Grid.Column="0"
              Grid.Row="0"
              Grid.ColumnSpan="2"
              AutomationProperties.AutomationId="Grid10_B5933255" />
        <Grid x:Name="LabelContainer"
              Grid.Column="1"
              Grid.Row="1"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              AutomationProperties.AutomationId="Grid11_B5933255">
            <Viewbox Stretch="Uniform"
                     AutomationProperties.AutomationId="Viewbox12_B5933255">
                <Grid Width="60"
                      Height="60"
                      AutomationProperties.AutomationId="Grid13_B5933255">
                    <Label x:Name="DeviceNumberLabel"
                           FontSize="30"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           AutomationProperties.AutomationId="Label14_B5933255" />
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</common:BaseWindow>