<UserControl x:Class="Aristocrat.Monaco.Application.UI.Views.InspectionIdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Aristocrat.Monaco.Application.UI.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type viewModels:InspectionIdViewModel}}"
             d:DesignHeight="45" d:DesignWidth="400">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Source="../Resources/checklist.png" Stretch="Fill" Height="45"/>
            <TextBlock Text="{Binding NameAndVersion}" Margin="20 0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
