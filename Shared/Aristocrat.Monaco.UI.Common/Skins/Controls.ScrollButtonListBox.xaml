<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Aristocrat.Monaco.UI.Common.Controls"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Controls.ListBox.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="MonacoScrollButtonListBox"
           TargetType="{x:Type ListBox}"
           BasedOn="{StaticResource MonacoListBox}">
        <Setter Property="AllowDrop"
                Value="False" />
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="Margin"
                Value="0 -20 0 0" />
        <Setter Property="ScrollViewer.CanContentScroll"
                Value="False" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Hidden" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                Value="Hidden" />
        <Setter Property="SelectionMode"
                Value="Single" />
        <Setter Property="VerticalAlignment"
                Value="Top" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBox}">
                    <Border Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True"
                            AutomationProperties.AutomationId="Border0_1D34B981">
                        <Grid AutomationProperties.AutomationId="Grid1_1D34B981">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"
                                                  AutomationProperties.AutomationId="ColumnDefinition2_1D34B981" />
                                <ColumnDefinition Width="*"
                                                  AutomationProperties.AutomationId="ColumnDefinition3_1D34B981" />
                            </Grid.ColumnDefinitions>
                            <ScrollViewer x:Name="LB_ScrollViewer"
                                          Padding="{TemplateBinding Padding}"
                                          CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                          AutomationProperties.AutomationId="ScrollViewer4_1D34B981">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                AutomationProperties.AutomationId="ItemsPresenter5_1D34B981" />
                            </ScrollViewer>
                            <!--DockPanel doesn't seem to work like it does for ScrollButtonDataGrid-->
                            <DockPanel Grid.Column="1"
                                       LastChildFill="False"
                                       AutomationProperties.AutomationId="DockPanel6_1D34B981">
                                <StackPanel Orientation="Horizontal"
                                            DockPanel.Dock="Right"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            AutomationProperties.AutomationId="StackPanel7_1D34B981">
                                    <controls:DataGridScrollButtons HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    ScrollGrid="{Binding ElementName=LB_ScrollViewer}"
                                                                    Visibility="{Binding CanContentScroll, Converter={StaticResource TrueVisibleFalseCollapsed}, RelativeSource={RelativeSource Self}}"
                                                                    Margin="5 73 0 0" />
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>