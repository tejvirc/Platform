<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <Style x:Key="MonacoTextBox"
           TargetType="{x:Type TextBox}">
        <Setter Property="Background"
                Value="{DynamicResource DarkBrush1}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource Brush3}" />
        <Setter Property="BorderThickness"
                Value="2" />
        <Setter Property="CaretBrush"
                Value="{DynamicResource Brush3}" />
        <Setter Property="ContextMenu"
                Value="{DynamicResource TextBoxMetroContextMenu}" />
        <Setter Property="controls:ControlsHelper.FocusBorderBrush"
                Value="{DynamicResource FocusBorderBrush}" />
        <Setter Property="controls:ControlsHelper.MouseOverBorderBrush"
                Value="{DynamicResource MouseOverHighlightBrush}" />
        <Setter Property="controls:TextBoxHelper.ButtonFontSize"
                Value="{DynamicResource ClearTextButtonFontSize}" />
        <Setter Property="controls:TextBoxHelper.ButtonWidth"
                Value="22" />
        <Setter Property="controls:TextBoxHelper.IsMonitoring"
                Value="True" />
        <Setter Property="FontFamily"
                Value="{DynamicResource MonacoFontFamily}" />
        <Setter Property="FontSize"
                Value="{DynamicResource ContentFontSize}" />
        <Setter Property="Foreground"
                Value="{DynamicResource Brush3}" />
        <Setter Property="MinHeight"
                Value="26" />
        <Setter Property="Padding"
                Value="5 10" />
        <Setter Property="SelectionBrush"
                Value="{DynamicResource HighlightBrush1}" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="EnterGotFocus"
                                    AutomationProperties.AutomationId="Storyboard0_1C0DFFE8">
                            <DoubleAnimation Duration="0:0:0.2"
                                             To="0.2"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="PART_Message"
                                             AutomationProperties.AutomationId="DoubleAnimation1_1C0DFFE8" />
                        </Storyboard>
                        <Storyboard x:Key="ExitGotFocus"
                                    AutomationProperties.AutomationId="Storyboard2_1C0DFFE8">
                            <DoubleAnimation Duration="0:0:0.2"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="PART_Message"
                                             AutomationProperties.AutomationId="DoubleAnimation3_1C0DFFE8" />
                        </Storyboard>
                        <Storyboard x:Key="EnterHasText"
                                    AutomationProperties.AutomationId="Storyboard4_1C0DFFE8">
                            <DoubleAnimation Duration="0:0:0.2"
                                             From="0.2"
                                             To="0"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="PART_Message"
                                             AutomationProperties.AutomationId="DoubleAnimation5_1C0DFFE8" />
                        </Storyboard>
                        <Storyboard x:Key="ExitHasText"
                                    AutomationProperties.AutomationId="Storyboard6_1C0DFFE8">
                            <DoubleAnimation Duration="0:0:0.2"
                                             Storyboard.TargetProperty="Opacity"
                                             Storyboard.TargetName="PART_Message"
                                             AutomationProperties.AutomationId="DoubleAnimation7_1C0DFFE8" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid AutomationProperties.AutomationId="Grid8_1C0DFFE8">
                        <AdornerDecorator x:Name="PART_WaitingForDataEffectAdornerDecorator"
                                          Visibility="Collapsed"
                                          AutomationProperties.AutomationId="AdornerDecorator9_1C0DFFE8">
                            <AdornerDecorator.CacheMode>
                                <BitmapCache EnableClearType="True"
                                             SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                             AutomationProperties.AutomationId="BitmapCache10_1C0DFFE8" />
                            </AdornerDecorator.CacheMode>
                            <Border x:Name="PART_WaitingForDataEffectGrid"
                                    BorderBrush="Transparent"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    AutomationProperties.AutomationId="Border11_1C0DFFE8" />
                        </AdornerDecorator>
                        <Border x:Name="Base"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                AutomationProperties.AutomationId="Border12_1C0DFFE8" />
                        <Grid x:Name="PART_InnerGrid"
                              Margin="2 0"
                              AutomationProperties.AutomationId="Grid13_1C0DFFE8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="TextColumn"
                                                  Width="*"
                                                  AutomationProperties.AutomationId="ColumnDefinition14_1C0DFFE8" />
                                <ColumnDefinition x:Name="ButtonColumn"
                                                  Width="Auto"
                                                  AutomationProperties.AutomationId="ColumnDefinition15_1C0DFFE8" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"
                                               AutomationProperties.AutomationId="RowDefinition16_1C0DFFE8" />
                                <RowDefinition x:Name="ButtonRow"
                                               Height="*"
                                               AutomationProperties.AutomationId="RowDefinition17_1C0DFFE8" />
                            </Grid.RowDefinitions>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          BorderThickness="0"
                                          Background="{x:Null}"
                                          Grid.Column="0"
                                          IsTabStop="False"
                                          Margin="2"
                                          Grid.Row="1"
                                          VerticalAlignment="Stretch"
                                          AutomationProperties.AutomationId="ScrollViewer18_1C0DFFE8" />
                            <TextBlock x:Name="PART_Message"
                                       Grid.Column="0"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       IsHitTestVisible="False"
                                       Margin="6,2"
                                       Opacity="0.6"
                                       Padding="{TemplateBinding Padding}"
                                       Grid.Row="1"
                                       TextAlignment="{TemplateBinding controls:TextBoxHelper.WatermarkAlignment}"
                                       Text="{TemplateBinding controls:TextBoxHelper.Watermark}"
                                       Visibility="Collapsed"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                       AutomationProperties.AutomationId="TextBlock19_1C0DFFE8" />
                            <ContentControl x:Name="PART_FloatingMessageContainer"
                                            Grid.ColumnSpan="2"
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            Style="{DynamicResource FloatingMessageContainerStyle}"
                                            AutomationProperties.AutomationId="ContentControl20_1C0DFFE8">
                                <TextBlock x:Name="PART_FloatingMessage"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           Style="{DynamicResource MetroAutoCollapsingTextBlock}"
                                           TextAlignment="{TemplateBinding controls:TextBoxHelper.WatermarkAlignment}"
                                           Text="{TemplateBinding controls:TextBoxHelper.Watermark}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           AutomationProperties.AutomationId="TextBlock21_1C0DFFE8" />
                            </ContentControl>
                            <Button x:Name="PART_ClearText"
                                    ContentTemplate="{TemplateBinding controls:TextBoxHelper.ButtonContentTemplate}"
                                    Content="{TemplateBinding controls:TextBoxHelper.ButtonContent}"
                                    Grid.Column="1"
                                    Foreground="{TemplateBinding Foreground}"
                                    Focusable="False"
                                    FontSize="{TemplateBinding controls:TextBoxHelper.ButtonFontSize}"
                                    FontFamily="{TemplateBinding controls:TextBoxHelper.ButtonFontFamily}"
                                    IsTabStop="False"
                                    controls:TextBoxHelper.IsClearTextButtonBehaviorEnabled="{Binding (controls:TextBoxHelper.ClearTextButton), Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Style="{DynamicResource ChromelessButtonStyle}"
                                    Width="{TemplateBinding controls:TextBoxHelper.ButtonWidth}"
                                    AutomationProperties.AutomationId="Button22_1C0DFFE8">
                                <Button.Visibility>
                                    <Binding Mode="OneWay"
                                             Path="(controls:TextBoxHelper.ClearTextButton)"
                                             RelativeSource="{RelativeSource TemplatedParent}">
                                        <Binding.Converter>
                                            <BooleanToVisibilityConverter />
                                        </Binding.Converter>
                                    </Binding>
                                </Button.Visibility>
                            </Button>
                        </Grid>
                        <Border x:Name="DisabledVisualElement"
                                BorderBrush="{DynamicResource ControlsDisabledBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{DynamicResource ControlsDisabledBrush}"
                                IsHitTestVisible="False"
                                Opacity="0"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                Visibility="{Binding (controls:ControlsHelper.DisabledVisualElementVisibility), Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                AutomationProperties.AutomationId="Border23_1C0DFFE8" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger
                                Binding="{Binding (controls:TextBoxHelper.ButtonsAlignment), RelativeSource={RelativeSource Self}}"
                                     Value="Left"
                                     AutomationProperties.AutomationId="DataTrigger24_1C0DFFE8">
                            <Setter Property="Width"
                                    TargetName="ButtonColumn"
                                    Value="*" />
                            <Setter Property="Grid.Column"
                                    TargetName="PART_ClearText"
                                    Value="0" />
                            <Setter Property="Grid.Column"
                                    TargetName="PART_ContentHost"
                                    Value="1" />
                            <Setter Property="Grid.Column"
                                    TargetName="PART_Message"
                                    Value="1" />
                            <Setter Property="Width"
                                    TargetName="TextColumn"
                                    Value="Auto" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}"
                                     Value=""
                                     AutomationProperties.AutomationId="DataTrigger25_1C0DFFE8">
                            <Setter Property="Visibility"
                                    TargetName="PART_Message"
                                    Value="Visible" />
                        </DataTrigger>
                        <MultiDataTrigger AutomationProperties.AutomationId="MultiDataTrigger26_1C0DFFE8">
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsVisible, RelativeSource={RelativeSource Self}}"
                                           Value="True" />
                                <Condition
                                        Binding="{Binding (controls:TextBoxHelper.UseFloatingWatermark), RelativeSource={RelativeSource Self}}"
                                           Value="True" />
                                <Condition
                                        Binding="{Binding (controls:TextBoxHelper.HasText), RelativeSource={RelativeSource Self}}"
                                           Value="True" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.EnterActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard27_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard28_1C0DFFE8">
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="0"
                                                         To="15"
                                                         Storyboard.TargetProperty="MaxHeight"
                                                         Storyboard.TargetName="PART_FloatingMessageContainer"
                                                         AutomationProperties.AutomationId="DoubleAnimation29_1C0DFFE8">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseInOut"
                                                                 Exponent="2"
                                                                 AutomationProperties.AutomationId="ExponentialEase30_1C0DFFE8" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         Storyboard.TargetProperty="Opacity"
                                                         Storyboard.TargetName="PART_FloatingMessageContainer"
                                                         AutomationProperties.AutomationId="DoubleAnimation31_1C0DFFE8" />
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         To="0"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         Storyboard.TargetName="PART_FloatingMessage"
                                                         AutomationProperties.AutomationId="DoubleAnimation32_1C0DFFE8">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut"
                                                                 Exponent="2"
                                                                 AutomationProperties.AutomationId="ExponentialEase33_1C0DFFE8" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.EnterActions>
                            <MultiDataTrigger.ExitActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard34_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard35_1C0DFFE8">
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="15"
                                                         To="0"
                                                         Storyboard.TargetProperty="MaxHeight"
                                                         Storyboard.TargetName="PART_FloatingMessageContainer"
                                                         AutomationProperties.AutomationId="DoubleAnimation36_1C0DFFE8">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseInOut"
                                                                 Exponent="2"
                                                                 AutomationProperties.AutomationId="ExponentialEase37_1C0DFFE8" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         To="0"
                                                         Storyboard.TargetProperty="Opacity"
                                                         Storyboard.TargetName="PART_FloatingMessageContainer"
                                                         AutomationProperties.AutomationId="DoubleAnimation38_1C0DFFE8" />
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         To="20"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         Storyboard.TargetName="PART_FloatingMessage"
                                                         AutomationProperties.AutomationId="DoubleAnimation39_1C0DFFE8">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseIn"
                                                                 Exponent="2"
                                                                 AutomationProperties.AutomationId="ExponentialEase40_1C0DFFE8" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.ExitActions>
                        </MultiDataTrigger>
                        <MultiDataTrigger AutomationProperties.AutomationId="MultiDataTrigger41_1C0DFFE8">
                            <MultiDataTrigger.Conditions>
                                <Condition
                                        Binding="{Binding (controls:TextBoxHelper.ButtonsAlignment), RelativeSource={RelativeSource Self}}"
                                           Value="Right" />
                                <Condition
                                        Binding="{Binding (controls:TextBoxHelper.ClearTextButton), RelativeSource={RelativeSource Self}}"
                                           Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Grid.ColumnSpan"
                                    TargetName="PART_ContentHost"
                                    Value="2" />
                            <Setter Property="Grid.ColumnSpan"
                                    TargetName="PART_Message"
                                    Value="2" />
                        </MultiDataTrigger>
                        <Trigger Property="IsEnabled"
                                 Value="False"
                                 AutomationProperties.AutomationId="Trigger42_1C0DFFE8">
                            <Setter Property="Opacity"
                                    TargetName="DisabledVisualElement"
                                    Value="0.55" />
                        </Trigger>
                        <Trigger Property="IsReadOnly"
                                 Value="True"
                                 AutomationProperties.AutomationId="Trigger43_1C0DFFE8">
                            <Setter Property="IsEnabled"
                                    TargetName="PART_ClearText"
                                    Value="False" />
                        </Trigger>
                        <Trigger Property="IsFocused"
                                 Value="True"
                                 AutomationProperties.AutomationId="Trigger44_1C0DFFE8">
                            <Setter Property="BorderBrush"
                                    TargetName="Base"
                                    Value="{DynamicResource FocusBorderBrush}" />
                            <Setter Property="Foreground"
                                    TargetName="PART_FloatingMessage"
                                    Value="{DynamicResource LightBrush1}" />
                            <Setter Property="Opacity"
                                    TargetName="PART_FloatingMessage"
                                    Value="1" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 SourceName="PART_ClearText"
                                 Value="True"
                                 AutomationProperties.AutomationId="Trigger45_1C0DFFE8">
                            <Setter Property="Background"
                                    TargetName="PART_ClearText"
                                    Value="{DynamicResource Brush2}" />
                            <Setter Property="Foreground"
                                    TargetName="PART_ClearText"
                                    Value="{DynamicResource Brush5}" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 SourceName="PART_ClearText"
                                 Value="True"
                                 AutomationProperties.AutomationId="Trigger46_1C0DFFE8">
                            <Setter Property="Background"
                                    TargetName="PART_ClearText"
                                    Value="{DynamicResource Brush2}" />
                            <Setter Property="Foreground"
                                    TargetName="PART_ClearText"
                                    Value="{DynamicResource Brush3}" />
                        </Trigger>
                        <MultiTrigger AutomationProperties.AutomationId="MultiTrigger47_1C0DFFE8">
                            <MultiTrigger.Conditions>
                                <Condition Property="controls:TextBoxHelper.HasText"
                                           Value="False" />
                                <Condition Property="IsFocused"
                                           Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard48_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard49_1C0DFFE8">
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         To="0.2"
                                                         Storyboard.TargetProperty="Opacity"
                                                         Storyboard.TargetName="PART_Message"
                                                         AutomationProperties.AutomationId="DoubleAnimation50_1C0DFFE8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard51_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard52_1C0DFFE8">
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         Storyboard.TargetProperty="Opacity"
                                                         Storyboard.TargetName="PART_Message"
                                                         AutomationProperties.AutomationId="DoubleAnimation53_1C0DFFE8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                        <Trigger Property="controls:TextBoxHelper.HasText"
                                 Value="True"
                                 AutomationProperties.AutomationId="Trigger54_1C0DFFE8">
                            <Trigger.EnterActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard55_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard56_1C0DFFE8">
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="0.2"
                                                         To="0"
                                                         Storyboard.TargetProperty="Opacity"
                                                         Storyboard.TargetName="PART_Message"
                                                         AutomationProperties.AutomationId="DoubleAnimation57_1C0DFFE8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard58_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard59_1C0DFFE8">
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         Storyboard.TargetProperty="Opacity"
                                                         Storyboard.TargetName="PART_Message"
                                                         AutomationProperties.AutomationId="DoubleAnimation60_1C0DFFE8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <MultiTrigger AutomationProperties.AutomationId="MultiTrigger61_1C0DFFE8">
                            <MultiTrigger.Conditions>
                                <Condition Property="IsVisible"
                                           Value="True" />
                                <Condition Property="controls:TextBoxHelper.IsWaitingForData"
                                           Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard AutomationProperties.AutomationId="BeginStoryboard62_1C0DFFE8">
                                    <Storyboard AutomationProperties.AutomationId="Storyboard63_1C0DFFE8">
                                        <DoubleAnimation AutoReverse="True"
                                                         Timeline.DesiredFrameRate="30"
                                                         Duration="0:0:2"
                                                         From="0"
                                                         RepeatBehavior="Forever"
                                                         To="1"
                                                         Storyboard.TargetProperty="(Effect).Opacity"
                                                         Storyboard.TargetName="PART_WaitingForDataEffectGrid"
                                                         AutomationProperties.AutomationId="DoubleAnimation64_1C0DFFE8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <Setter Property="Visibility"
                                    TargetName="PART_WaitingForDataEffectAdornerDecorator"
                                    Value="Visible" />
                            <Setter Property="Effect"
                                    TargetName="PART_WaitingForDataEffectGrid"
                                    Value="{DynamicResource WaitingForDataEffect}" />
                        </MultiTrigger>
                        <Trigger Property="controls:TextBoxHelper.IsWaitingForData"
                                 Value="False"
                                 AutomationProperties.AutomationId="Trigger65_1C0DFFE8">
                            <Setter Property="Visibility"
                                    TargetName="PART_WaitingForDataEffectAdornerDecorator"
                                    Value="Collapsed" />
                            <Setter Property="Effect"
                                    TargetName="PART_WaitingForDataEffectGrid"
                                    Value="{x:Null}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Validation.ErrorTemplate"
                Value="{DynamicResource ValidationErrorTemplate}" />
    </Style>
    <Style  x:Key="MonacoTextBoxSmall"
            TargetType="TextBox"
            BasedOn="{StaticResource MonacoTextBox}">
        <Setter Property="MinHeight"
                        Value="0" />
        <Setter Property="FontSize"
                        Value="16" />
        <Setter Property="Padding"
                        Value="4 5 4 5" />
    </Style>
</ResourceDictionary>