<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">

    <!-- Font Families. -->
    <FontFamily x:Key="ContentFontFamily">Arial</FontFamily>
    <FontFamily x:Key="DefaultFontFamily">Helvetica</FontFamily>
    <FontFamily x:Key="InputFontFamily">Helvetica</FontFamily>
    <FontFamily x:Key="NormalFontFamily">Arial</FontFamily>
    <FontFamily x:Key="ButtonFontFamily">Arial</FontFamily>
    <FontFamily x:Key="HeadingFontFamily">Arial</FontFamily>

    <!-- Font Sizes. -->
    <system:Double x:Key="ControlTitleFontSize">14</system:Double>
    <system:Double x:Key="ContentFontSize">13</system:Double>
    <system:Double x:Key="DefaultFontSize">24</system:Double>
    <system:Double x:Key="InputFontSize">24</system:Double>
    <system:Double x:Key="NormalFontSize">20</system:Double>
    <system:Double x:Key="ButtonFontSize">18</system:Double>
    <system:Double x:Key="Heading1FontSize">36</system:Double>
    <system:Double x:Key="Heading2FontSize">28</system:Double>
    <system:Double x:Key="Heading3FontSize">24</system:Double>
    <system:Double x:Key="Heading4FontSize">18</system:Double>
    <system:Double x:Key="Heading5FontSize">15</system:Double>
    <system:Double x:Key="Heading6FontSize">11</system:Double>

</ResourceDictionary>