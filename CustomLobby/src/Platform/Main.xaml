<Window x:Class="Platform.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platform"
        xmlns:controls="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">
    <Grid x:Name="GameLayout">
        <Grid x:Name="GameRoot">
            <WindowsFormsHost Loaded="WinHostCtrl_OnLoaded"
                                       Background="Black"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch">
                <controls:Control x:Name="GameBottomWindowCtrl" />
            </WindowsFormsHost>
        </Grid>
    </Grid>
</Window>
