<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace></RootNamespace>
    <NoWarn>CS0649;CS0169;NU5123</NoWarn>
    <NukeRootDirectory>..</NukeRootDirectory>
    <NukeScriptDirectory>..</NukeScriptDirectory>
    <NukeTelemetryVersion>1</NukeTelemetryVersion>
    <Product>Monaco</Product>
    <Copyright>Copyright © Aristocrat Technologies Inc. 2022</Copyright>
    <Company>Aristocrat Technologies Inc.</Company>
    <Authors>Monaco Platform Team</Authors>
    <PackAsTool>true</PackAsTool>
    <PackageProjectUrl>https://platform.monaco.aristocrat.com/monaco</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Aristocrat-Monaco-Platform/monaco</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageDescription>Monaco build .NET Global Tool.</PackageDescription>
    <PackageId>Monaco.Build.GlobalTool</PackageId>
    <ToolCommandName>dotnet-monacobuild</ToolCommandName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuGet.CommandLine" Version="[5.8.0]" />
    <PackageReference Include="Nuke.Common" Version="6.0.2" />
    <PackageDownload Include="coverlet.console" Version="[3.1.0]" />
    <PackageDownload Include="coverlet.msbuild" Version="[3.1.0]" />
    <PackageDownload Include="docfx.console" Version="[2.58.9]" />
    <PackageDownload Include="GitVersion.Tool" Version="[5.6.7]" />
    <PackageDownload Include="Microsoft.TestPlatform" Version="[16.8.3]" />
    <PackageDownload Include="dotnet-sonarscanner" Version="[5.5.3]" />
    <PackageDownload Include="JetBrains.ReSharper.GlobalTools" Version="[2021.1.2]" />
    <PackageDownload Include="ReportGenerator" Version="[5.1.4]" />
  </ItemGroup>
</Project>
