<UserControl x:Class="Aristocrat.Monaco.Sas.UI.ConfigurationScreen.SasErrorStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:loc="http://monaco.aristocrat.com/localization"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             AutomationProperties.AutomationId="UserControl0_D03EEC3F">
    <Grid Margin="10 10"
          AutomationProperties.AutomationId="Grid1_D03EEC3F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition2_D03EEC3F" />
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition3_D03EEC3F" />
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition4_D03EEC3F" />
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition5_D03EEC3F" />
            <RowDefinition Height="*"
                           AutomationProperties.AutomationId="RowDefinition6_D03EEC3F" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition AutomationProperties.AutomationId="ColumnDefinition7_D03EEC3F" />
            <ColumnDefinition Width="Auto"
                              AutomationProperties.AutomationId="ColumnDefinition8_D03EEC3F" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1"
               Grid.Column="0"
               Content="{lex:Loc Key={x:Static loc:ResourceKeys.CrcErrors}}"
               AutomationProperties.AutomationId="Label9_D03EEC3F" />
        <Label Grid.Row="1"
               Grid.Column="1"
               Content="{Binding CrcError}"
               AutomationProperties.AutomationId="Label10_D03EEC3F" />
        <Label Grid.Row="2"
               Grid.Column="0"
               Content="{lex:Loc Key={x:Static loc:ResourceKeys.InterByteDelay}}"
               AutomationProperties.AutomationId="Label11_D03EEC3F" />
        <Label Grid.Row="2"
               Grid.Column="1"
               Content="{Binding ErrorInterByteDelay}"
               AutomationProperties.AutomationId="Label12_D03EEC3F" />
        <Label Grid.Row="3"
               Grid.Column="0"
               Content="{lex:Loc Key={x:Static loc:ResourceKeys.Chirp}}"
               AutomationProperties.AutomationId="Label13_D03EEC3F" />
        <Label Grid.Row="3"
               Grid.Column="1"
               Content="{Binding Chirp}"
               AutomationProperties.AutomationId="Label14_D03EEC3F" />
    </Grid>
</UserControl>