<UserControl x:Class="Aristocrat.Monaco.Hhr.UI.Controls.TimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:common="http://monaco.aristocrat.com/common"
             mc:Ignorable="d"
             x:Name="Timer"
             d:DesignHeight="450"
             d:DesignWidth="800"
             AutomationProperties.AutomationId="UserControl0_34C40FAC">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid AutomationProperties.AutomationId="Grid1_34C40FAC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition2_34C40FAC" />
            <RowDefinition Height="Auto"
                           AutomationProperties.AutomationId="RowDefinition3_34C40FAC" />
        </Grid.RowDefinitions>
        <!-- Timer Video-->
        <Grid x:Name="BinkTimer"
              Grid.Row="0"
              AutomationProperties.AutomationId="Grid4_34C40FAC" />
        <!-- Timer Counter-->
        <TextBlock Grid.Row="0"
                   FontSize="40"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Background="Transparent"
                   Margin="0 0 0 20"
                   Foreground="GhostWhite"
                   FontWeight="Bold"
                   AutomationProperties.AutomationId="TextBlock5_34C40FAC">
            <TextBlock.Text>
                <Binding Path="Counter"
                         ElementName="Timer" />
            </TextBlock.Text>
        </TextBlock>
        <!-- Footer Title Text Title -->
        <Image Grid.Row="1"
               Width="128"
               Height="31"
               Margin="0 -5 0 0"
               Source="../Resources/ExpireQuickPick.png"
               Visibility="{Binding IsQuickPickTextVisible, Converter={StaticResource TrueVisibleFalseHidden}, FallbackValue=Hidden, ElementName=Timer}"
               AutomationProperties.AutomationId="Image6_34C40FAC" />
        <Image Grid.Row="1"
               Width="128"
               Height="31"
               Margin="0 -5 0 0"
               Source="../Resources/ExpireAutoPick.png"
               Visibility="{Binding IsAutoPickTextVisible, Converter={StaticResource TrueVisibleFalseHidden}, FallbackValue=Hidden, ElementName=Timer}"
               AutomationProperties.AutomationId="Image7_34C40FAC" />
    </Grid>
</UserControl>