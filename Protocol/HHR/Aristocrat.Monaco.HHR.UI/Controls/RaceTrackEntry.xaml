	</UserControl.Resources>

	<Image x:Name="Horse" 
		       gif:ImageBehavior.AnimatedSource="{Binding HorseImage, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
		       gif:ImageBehavior.AnimationSpeedRatio="1.3"
		       gif:ImageBehavior.RepeatBehavior="Forever"
		       HorizontalAlignment="Left"
		       Height="60"
		       Margin="0 -30 0 0">

		<Image.Style>
			<Style>
				<Style.Triggers>

					<!-- 1st place -->
					<MultiDataTrigger>
						<MultiDataTrigger.Conditions>
							<Condition Value="True" Binding="{Binding RaceStarted, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
							<Condition Value="1" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
						</MultiDataTrigger.Conditions>
						<MultiDataTrigger.EnterActions>
							<BeginStoryboard x:Name="BeginHorseStoryboard1" Storyboard="{StaticResource HorseStoryboard1}"/>
						</MultiDataTrigger.EnterActions>
						<MultiDataTrigger.ExitActions>
							<StopStoryboard BeginStoryboardName="BeginHorseStoryboard1" />
						</MultiDataTrigger.ExitActions>
					</MultiDataTrigger>

					<!-- 2nd place -->
					<MultiDataTrigger>
