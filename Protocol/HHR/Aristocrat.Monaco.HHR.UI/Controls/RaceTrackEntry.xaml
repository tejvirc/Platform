						</MultiDataTrigger.EnterActions>
						<MultiDataTrigger.ExitActions>
							<StopStoryboard BeginStoryboardName="BeginHorseStoryboard3" />
						</MultiDataTrigger.ExitActions>
					</MultiDataTrigger>

					<!-- 4th place -->
					<MultiDataTrigger>
						<MultiDataTrigger.Conditions>
							<Condition Value="True" Binding="{Binding RaceStarted, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
							<Condition Value="4" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
						</MultiDataTrigger.Conditions>
						<MultiDataTrigger.EnterActions>
							<BeginStoryboard x:Name="BeginHorseStoryboard4" Storyboard="{StaticResource HorseStoryboard4}"/>
						</MultiDataTrigger.EnterActions>
						<MultiDataTrigger.ExitActions>
							<StopStoryboard BeginStoryboardName="BeginHorseStoryboard4" />
						</MultiDataTrigger.ExitActions>
					</MultiDataTrigger>

					<!-- 5th place -->
					<MultiDataTrigger>
						<MultiDataTrigger.Conditions>
							<Condition Value="True" Binding="{Binding RaceStarted, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
							<Condition Value="5" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
						</MultiDataTrigger.Conditions>
						<MultiDataTrigger.EnterActions>
							<BeginStoryboard x:Name="BeginHorseStoryboard5" Storyboard="{StaticResource HorseStoryboard5}"/>
						</MultiDataTrigger.EnterActions>
						<MultiDataTrigger.ExitActions>
							<StopStoryboard BeginStoryboardName="BeginHorseStoryboard5" />
						</MultiDataTrigger.ExitActions>
					</MultiDataTrigger>

					<!-- 6th place -->
					<MultiDataTrigger>
						<MultiDataTrigger.Conditions>
							<Condition Value="True" Binding="{Binding RaceStarted, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
							<Condition Value="6" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
