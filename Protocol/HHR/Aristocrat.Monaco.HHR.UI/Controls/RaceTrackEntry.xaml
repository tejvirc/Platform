							<Condition Value="8" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
						</MultiDataTrigger.Conditions>
						<MultiDataTrigger.EnterActions>
							<BeginStoryboard x:Name="BeginHorseStoryboard8" Storyboard="{StaticResource HorseStoryboard8}"/>
						</MultiDataTrigger.EnterActions>
						<MultiDataTrigger.ExitActions>
							<StopStoryboard BeginStoryboardName="BeginHorseStoryboard8" />
						</MultiDataTrigger.ExitActions>
					</MultiDataTrigger>

					<!-- 9th place -->
					<MultiDataTrigger>
						<MultiDataTrigger.Conditions>
							<Condition Value="True" Binding="{Binding RaceStarted, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
							<Condition Value="9" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
						</MultiDataTrigger.Conditions>
						<MultiDataTrigger.EnterActions>
							<BeginStoryboard x:Name="BeginHorseStoryboard9" Storyboard="{StaticResource HorseStoryboard9}"/>
