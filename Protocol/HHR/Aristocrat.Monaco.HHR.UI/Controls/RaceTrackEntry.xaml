					<MultiDataTrigger>
						<MultiDataTrigger.Conditions>
							<Condition Value="True" Binding="{Binding RaceStarted, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
							<Condition Value="10" Binding="{Binding Place, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
