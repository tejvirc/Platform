						</MultiDataTrigger.ExitActions>
					</MultiDataTrigger>

					<!-- Pause/Resume -->
					<DataTrigger Binding="{Binding IsPaused, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
						<DataTrigger.EnterActions>
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard1" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard2" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard3" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard4" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard5" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard6" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard7" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard8" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard9" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard10" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard11" />
							<PauseStoryboard BeginStoryboardName="BeginHorseStoryboard12" />
						</DataTrigger.EnterActions>
						<DataTrigger.ExitActions>
							<ResumeStoryboard BeginStoryboardName="BeginHorseStoryboard1" />
							<ResumeStoryboard BeginStoryboardName="BeginHorseStoryboard2" />
							<ResumeStoryboard BeginStoryboardName="BeginHorseStoryboard3" />
