<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Aristocrat.Monaco.Hhr.UI.Settings"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com"
                    xmlns:loc="http://monaco.aristocrat.com/localization">
    <DataTemplate DataType="{x:Type local:MachineSettings}">
        <Grid AutomationProperties.AutomationId="Grid0_6B48DA50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"
                               AutomationProperties.AutomationId="RowDefinition1_6B48DA50" />
                <RowDefinition Height="Auto"
                               AutomationProperties.AutomationId="RowDefinition2_6B48DA50" />
                <RowDefinition Height="Auto"
                               AutomationProperties.AutomationId="RowDefinition3_6B48DA50" />
                <RowDefinition Height="Auto"
                               AutomationProperties.AutomationId="RowDefinition4_6B48DA50" />
                <RowDefinition Height="Auto"
                               AutomationProperties.AutomationId="RowDefinition5_6B48DA50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  AutomationProperties.AutomationId="ColumnDefinition6_6B48DA50" />
                <ColumnDefinition Width="*"
                                  AutomationProperties.AutomationId="ColumnDefinition7_6B48DA50" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Style="{DynamicResource SettingNameStyle}"
                       Grid.Row="0"
                       Text="{lex:Loc CentralServerIpAddressLabel}"
                       AutomationProperties.AutomationId="TextBlock8_6B48DA50" />
            <TextBlock Grid.Column="1"
                       Style="{DynamicResource SettingValueStyle}"
                       Grid.Row="0"
                       Text="{Binding CentralServerIpAddress}"
                       AutomationProperties.AutomationId="TextBlock9_6B48DA50" />
            <TextBlock Grid.Column="0"
                       Style="{DynamicResource SettingNameStyle}"
                       Grid.Row="1"
                       Text="{lex:Loc CentralServerTcpPortNumberLabel}"
                       AutomationProperties.AutomationId="TextBlock10_6B48DA50" />
            <TextBlock Grid.Column="1"
                       Style="{DynamicResource SettingValueStyle}"
                       Grid.Row="1"
                       Text="{Binding CentralServerTcpPortNumber}"
                       AutomationProperties.AutomationId="TextBlock11_6B48DA50" />
            <TextBlock Grid.Column="0"
                       Style="{DynamicResource SettingNameStyle}"
                       Grid.Row="2"
                       Text="{lex:Loc CentralServerEncryptionKeyLabel}"
                       AutomationProperties.AutomationId="TextBlock12_6B48DA50" />
            <TextBlock Grid.Column="1"
                       Style="{DynamicResource SettingValueStyle}"
                       Grid.Row="2"
                       Text="{Binding CentralServerEncryptionKey}"
                       AutomationProperties.AutomationId="TextBlock13_6B48DA50" />
            <TextBlock Grid.Column="0"
                       Style="{DynamicResource SettingNameStyle}"
                       Grid.Row="3"
                       Text="{lex:Loc CentralServerUdpPortNumberLabel}"
                       AutomationProperties.AutomationId="TextBlock14_6B48DA50" />
            <TextBlock Grid.Column="1"
                       Style="{DynamicResource SettingValueStyle}"
                       Grid.Row="3"
                       Text="{Binding CentralServerUdpPortNumber}"
                       AutomationProperties.AutomationId="TextBlock15_6B48DA50" />
            <TextBlock Grid.Column="0"
                       Style="{DynamicResource SettingNameStyle}"
                       Grid.Row="4"
                       Text="{lex:Loc ManualHandicapModeLabel}"
                       AutomationProperties.AutomationId="TextBlock16_6B48DA50" />
            <TextBlock Grid.Column="1"
                       Style="{DynamicResource SettingValueStyle}"
                       Grid.Row="4"
                       Text="{Binding CentralServerHandicapMode}"
                       AutomationProperties.AutomationId="TextBlock17_6B48DA50" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>