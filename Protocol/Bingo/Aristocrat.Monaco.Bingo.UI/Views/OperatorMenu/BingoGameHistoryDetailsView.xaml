<operatorMenu:OperatorMenuPage 
    x:Class="Aristocrat.Monaco.Bingo.UI.Views.OperatorMenu.BingoGameHistoryDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    lex:ResxLocalizationProvider.DefaultAssembly="Aristocrat.Monaco.Localization"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources" 
    xmlns:viewModels="clr-namespace:Aristocrat.Monaco.Bingo.UI.ViewModels.OperatorMenu"
    xmlns:operatorMenu="clr-namespace:Aristocrat.Monaco.Application.UI.OperatorMenu;assembly=Aristocrat.Monaco.Application.UI"
    xmlns:loc="http://monaco.aristocrat.com/localization"
                               xmlns:commonConverters="clr-namespace:Aristocrat.Monaco.UI.Common.Converters;assembly=Aristocrat.Monaco.UI.Common"
                               xmlns:bingoConverters="clr-namespace:Aristocrat.Monaco.Bingo.UI.Converters"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance viewModels:BingoGameHistoryDetailsViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/Controls.xaml" />
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/OperatorMenu.xaml" />
                <ResourceDictionary Source="/Aristocrat.Monaco.UI.Common;component/Skins/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <bingoConverters:BingoNumberToStringConverter x:Key="BingoNumberToStringConverter" />
            <commonConverters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
            <Style TargetType="Label"
                   BasedOn="{StaticResource MonacoLabel}">
                <Setter Property="Margin"
                        Value="0 0 10 10" />
                <Setter Property="FontSize"
                        Value="17" />
            </Style>
            <Style TargetType="Button"
                   BasedOn="{StaticResource MonacoButton}">
                <Setter Property="Margin"
                        Value="5 0 5 0" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="Height"
                        Value="40" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical"
                MinWidth="600"
                AutomationProperties.AutomationId="StackPanel0_93A15CA">
        <!-- Bingo Game ID -->
        <StackPanel Orientation="Horizontal"
                    AutomationProperties.AutomationId="StackPanel1_93A15CA">
            <Label Content="{lex:Loc BingoGameID}"
                   AutomationProperties.AutomationId="Label2_93A15CA" />
            <Label Foreground="{DynamicResource LightBrush4}"
                   Content="{Binding BingoRoundData.RoundId}"
                   AutomationProperties.AutomationId="Label3_93A15CA" />
        </StackPanel>
        <!-- Ball Call -->
        <Label Margin="0"
               FontSize="19"
               HorizontalAlignment="Center"
               Content="{lex:Loc BallCall}"
               FontWeight="Bold"
               AutomationProperties.AutomationId="Label4_93A15CA" />
        <Border BorderBrush="{DynamicResource Brush3}"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Padding="8,8,8,5"
                Width="425"
                MinHeight="165"
                AutomationProperties.AutomationId="Border5_93A15CA">
            <StackPanel Orientation="Vertical"
                        AutomationProperties.AutomationId="StackPanel6_93A15CA">
                <!-- Ball Number Display -->
                <ItemsControl ItemsSource="{Binding BingoRoundData.BallCall.Numbers}"
                              HorizontalAlignment="Center"
                              AutomationProperties.AutomationId="ItemsControl7_93A15CA">
                    <ItemsControl.Template>
                        <ControlTemplate TargetType="ItemsControl">
                            <ItemsPresenter AutomationProperties.AutomationId="ItemsPresenter8_93A15CA" />
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel AutomationProperties.AutomationId="WrapPanel9_93A15CA" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DataTemplate.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize"
                                            Value="15" />
                                    <Setter Property="HorizontalAlignment"
                                            Value="Center" />
                                </Style>
                            </DataTemplate.Resources>
                            <Grid AutomationProperties.AutomationId="Grid10_93A15CA">
                                <StackPanel AutomationProperties.AutomationId="StackPanel11_93A15CA">
                                    <TextBlock Margin="3,5"
                                               Width="20"
                                               Text="{Binding Number, Converter={StaticResource BingoNumberToStringConverter}}"
                                               Foreground="{Binding ForeColor}"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               AutomationProperties.AutomationId="TextBlock12_93A15CA" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
        <!-- Bingo Card -->
        <Label Margin="0,20,0,0"
               FontSize="19"
               HorizontalAlignment="Center"
               Content="{lex:Loc BingoCard}"
               FontWeight="Bold"
               AutomationProperties.AutomationId="Label13_93A15CA" />
        <StackPanel HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    AutomationProperties.AutomationId="StackPanel14_93A15CA">
            <!-- Previous Card Button -->
            <Button
                    Visibility="{Binding BingoRoundData.IsMultiCardGame,
                    Converter={StaticResource TrueVisibleFalseCollapsed}}"
                    Command="{Binding DisplayPreviousCardCommand}"
                    Content="{lex:Loc PreviousButtonText}"
                    AutomationProperties.AutomationId="Button15_93A15CA" />
            <!-- Card Information -->
            <Border BorderBrush="{DynamicResource Brush3}"
                    BorderThickness="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Padding="8,8,8,5"
                    MinWidth="300"
                    MinHeight="165"
                    AutomationProperties.AutomationId="Border16_93A15CA">
                <StackPanel Orientation="Vertical"
                            AutomationProperties.AutomationId="StackPanel17_93A15CA">
                    <!-- "Card n of N" Message -->
                    <Label HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Content="{Binding CardNote}"
                           Visibility="{Binding BingoRoundData.IsMultiCardGame, Converter={StaticResource TrueVisibleFalseCollapsed}}"
                           AutomationProperties.AutomationId="Label18_93A15CA" />
                    <!-- Bingo Number Display -->
                    <ItemsControl ItemsSource="{Binding BingoRoundData.CurrentCard.Numbers}"
                                  HorizontalAlignment="Center"
                                  AutomationProperties.AutomationId="ItemsControl19_93A15CA">
                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ItemsPresenter AutomationProperties.AutomationId="ItemsPresenter20_93A15CA" />
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="5"
                                             Columns="5"
                                             HorizontalAlignment="Center"
                                             AutomationProperties.AutomationId="UniformGrid21_93A15CA" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DataTemplate.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize"
                                                Value="15" />
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                    </Style>
                                </DataTemplate.Resources>
                                <Grid AutomationProperties.AutomationId="Grid22_93A15CA">
                                    <StackPanel AutomationProperties.AutomationId="StackPanel23_93A15CA">
                                        <TextBlock Margin="3,5"
                                                   Width="20"
                                                   Text="{Binding Number, Converter={StaticResource BingoNumberToStringConverter}}"
                                                   Foreground="{Binding ForeColor}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   AutomationProperties.AutomationId="TextBlock24_93A15CA" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- Card Serial -->
                    <StackPanel Margin="0,5,0,0"
                                Orientation="Horizontal"
                                AutomationProperties.AutomationId="StackPanel25_93A15CA">
                        <Label Content="{lex:Loc BingoCardSerialNumber}"
                               AutomationProperties.AutomationId="Label26_93A15CA" />
                        <StackPanel Orientation="Horizontal" 
                                AutomationProperties.AutomationId="StackPanel61_93A15CA">
                            <Label Foreground="{DynamicResource LightBrush4}"
                               Content="{Binding BingoRoundData.CurrentCard.SerialNumber}"
                               AutomationProperties.AutomationId="Label27_93A15CA" />
                            <Label Foreground="{DynamicResource YellowBrush}" 
                               Content="(Golden)" 
                               Visibility="{Binding BingoRoundData.CurrentCard.IsGolden, Converter={StaticResource BoolToVisConverter}}"                                   
                               AutomationProperties.AutomationId="Label66_93A15CA" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Next Card Button -->
            <Button
                    Visibility="{Binding BingoRoundData.IsMultiCardGame, 
                    Converter={StaticResource TrueVisibleFalseCollapsed}}"
                    Command="{Binding DisplayNextCardCommand}"
                    Content="{lex:Loc NextButtonText}"
                    AutomationProperties.AutomationId="Button28_93A15CA" />
        </StackPanel>
        <!-- Pattern Data and Navigation -->
        <Label Margin="0,20,0,0"
               Content="{lex:Loc BingoPatternInformation}"
               HorizontalAlignment="Center"
               FontSize="19"
               FontWeight="Bold"
               AutomationProperties.AutomationId="Label29_93A15CA" />
        <StackPanel HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    AutomationProperties.AutomationId="StackPanel30_93A15CA">
            <!-- Previous Pattern Button -->
            <Button
                    Visibility="{Binding BingoRoundData.HasMultipleWinningPatterns, 
                    Converter={StaticResource TrueVisibleFalseCollapsed}}"
                    Command="{Binding DisplayPreviousPatternCommand}"
                    Content="{lex:Loc PreviousButtonText}"
                    AutomationProperties.AutomationId="Button31_93A15CA" />
            <!-- Pattern Data -->
            <Border BorderBrush="{DynamicResource Brush3}"
                    BorderThickness="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Padding="8,8,8,5"
                    MinWidth="300"
                    MinHeight="165"
                    AutomationProperties.AutomationId="Border32_93A15CA">
                <StackPanel MaxHeight="160"
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                            AutomationProperties.AutomationId="StackPanel33_93A15CA">
                    <Label HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Content="{Binding PatternNote}"
                           AutomationProperties.AutomationId="Label34_93A15CA" />
                    <!-- Pattern Information if not a Losing Game -->
                    <StackPanel Orientation="Vertical"
                                Visibility="{Binding BingoRoundData.IsLosingCard, Converter={StaticResource TrueCollapsedFalseVisible}}"
                                AutomationProperties.AutomationId="StackPanel35_93A15CA">
                        <!-- Pattern ID -->
                        <StackPanel Orientation="Horizontal"
                                    AutomationProperties.AutomationId="StackPanel36_93A15CA">
                            <Label Content="{lex:Loc BingoPatternID}"
                                   AutomationProperties.AutomationId="Label37_93A15CA" />
                            <Label Foreground="{DynamicResource LightBrush4}"
                                   Content="{Binding BingoRoundData.CurrentPattern.Id}"
                                   AutomationProperties.AutomationId="Label38_93A15CA" />
                        </StackPanel>
                        <!-- Pattern Name -->
                        <StackPanel Orientation="Horizontal"
                                    AutomationProperties.AutomationId="StackPanel39_93A15CA">
                            <Label Content="{lex:Loc BingoPatternName}"
                                   AutomationProperties.AutomationId="Label40_93A15CA" />
                            <Label Foreground="{DynamicResource LightBrush4}"
                                   Content="{Binding BingoRoundData.CurrentPattern.Name}"
                                   AutomationProperties.AutomationId="Label41_93A15CA" />
                        </StackPanel>
                        <!-- Pattern Ball Quantity (number of balls called to achieve pattern -->
                        <StackPanel Orientation="Horizontal"
                                    AutomationProperties.AutomationId="StackPanel42_93A15CA">
                            <Label Content="{lex:Loc BingoPatternBallQuantity}"
                                   AutomationProperties.AutomationId="Label43_93A15CA" />
                            <Label Foreground="{DynamicResource LightBrush4}"
                                   Content="{Binding BingoRoundData.CurrentPattern.BallQuantity}"
                                   AutomationProperties.AutomationId="Label44_93A15CA" />
                        </StackPanel>
                        <!-- Pattern Win Amount -->
                        <StackPanel Orientation="Horizontal"
                                    AutomationProperties.AutomationId="StackPanel45_93A15CA">
                            <Label Content="{lex:Loc BingoPatternWinAmount}"
                                   AutomationProperties.AutomationId="Label46_93A15CA" />
                            <Label Foreground="{DynamicResource LightBrush4}"
                                   Content="{Binding BingoRoundData.CurrentPattern.WinAmount}"
                                   AutomationProperties.AutomationId="Label47_93A15CA" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!-- Next Pattern Button -->
            <Button
                    Visibility="{Binding BingoRoundData.HasMultipleWinningPatterns, 
                    Converter={StaticResource TrueVisibleFalseCollapsed}}"
                    Command="{Binding DisplayNextPatternCommand}"
                    Content="{lex:Loc NextButtonText}"
                    AutomationProperties.AutomationId="Button48_93A15CA" />
        </StackPanel>
        <!-- Disclaimers and Color Key -->
        <StackPanel Margin="0,20,0,0"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical"
                    AutomationProperties.AutomationId="StackPanel49_93A15CA">
            <!-- Color Key -->
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        AutomationProperties.AutomationId="StackPanel50_93A15CA">
                <!-- Daubed Ball Key -->
                <StackPanel Orientation="Horizontal"
                            AutomationProperties.AutomationId="StackPanel51_93A15CA">
                    <Ellipse Height="22"
                             Width="22"
                             Fill="White"
                             AutomationProperties.AutomationId="Ellipse52_93A15CA" />
                    <Label VerticalAlignment="Center"
                           Margin="5,0,30,0"
                           Content="{lex:Loc DaubedBingoBall}"
                           AutomationProperties.AutomationId="Label53_93A15CA" />
                </StackPanel>
                <!-- Daubed Pattern Key -->
                <StackPanel Orientation="Horizontal"
                            AutomationProperties.AutomationId="StackPanel54_93A15CA">
                    <Ellipse Height="22"
                             Width="22"
                             Fill="HotPink"
                             AutomationProperties.AutomationId="Ellipse55_93A15CA" />
                    <Label VerticalAlignment="Center"
                           Margin="5,0,30,0"
                           Content="{lex:Loc DaubedBingoPattern}"
                           AutomationProperties.AutomationId="Label56_93A15CA" />
                </StackPanel>
                <!-- Undaubed Ball Key -->
                <StackPanel Orientation="Horizontal"
                            AutomationProperties.AutomationId="StackPanel57_93A15CA">
                    <Ellipse Height="22"
                             Width="22"
                             Fill="{DynamicResource Brush3}"
                             AutomationProperties.AutomationId="Ellipse58_93A15CA" />
                    <Label VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           Content="{lex:Loc UndaubedBingoBall}"
                           AutomationProperties.AutomationId="Label59_93A15CA" />
                </StackPanel>
            </StackPanel>
            <!-- Daubing Color Key & Disclaimer(s) -->
            <StackPanel HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        AutomationProperties.AutomationId="StackPanel60_93A15CA">
                <Grid AutomationProperties.AutomationId="Grid61_93A15CA">
                    <Ellipse Height="22"
                             Width="22"
                             Fill="White"
                             AutomationProperties.AutomationId="Ellipse62_93A15CA" />
                    <Ellipse Height="20"
                             Width="20"
                             Fill="{DynamicResource Brush2}"
                             AutomationProperties.AutomationId="Ellipse63_93A15CA" />
                    <TextBlock Text="i"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               AutomationProperties.AutomationId="TextBlock64_93A15CA" />
                </Grid>
                <Label Margin="5,0"
                       VerticalAlignment="Center"
                       Content="{lex:Loc GameEndWinDisclaimer}"
                       AutomationProperties.AutomationId="Label65_93A15CA" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</operatorMenu:OperatorMenuPage>