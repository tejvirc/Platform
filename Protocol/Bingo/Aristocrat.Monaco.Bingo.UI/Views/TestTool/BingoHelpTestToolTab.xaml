<mah:MetroTabItem x:Class="Aristocrat.Monaco.Bingo.UI.Views.TestTool.BingoHelpTestToolTab"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
         xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
         xmlns:viewModel="clr-namespace:Aristocrat.Monaco.Bingo.UI.ViewModels.TestTool"
         mc:Ignorable="d" 
         d:DesignHeight="450" d:DesignWidth="800"
         d:DataContext="{d:DesignInstance {x:Type viewModel:BingoHelpTestToolViewModel}, IsDesignTimeCreatable=False}"
         Header="BingoHelp">

    <mah:MetroTabItem.Resources>
        <DataTemplate x:Key="ColorComboBoxTemplate" DataType="Color">
            <StackPanel Orientation="Horizontal">
                <Rectangle Fill="{Binding}" Width="12" Height="12" Margin="0,2,5,2" />
                <TextBlock Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
    </mah:MetroTabItem.Resources>

    <GroupBox FontSize="8" Header="Appearance">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="5" Grid.Column="2"
                   Content="HELP BOX" 
                   FontSize="10"
                   HorizontalAlignment="Right"/>
            <xctk:DecimalUpDown Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2"
                               Value="{Binding HelpBoxTop}" 
                               Maximum="1"
                               Minimum="0"
                               Increment="0.01"
                               AllowSpin="True"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
            <xctk:DecimalUpDown Grid.Row="6" Grid.Column="2"
                                Value="{Binding HelpBoxLeft}" 
                                FontSize="10"
                                Maximum="1"
                                Minimum="0"
                                Increment="0.01"
                                AllowSpin="True"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"/>
            <Border Grid.Row="5" Grid.Column="3"
                    Grid.RowSpan="3" Grid.ColumnSpan="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    BorderThickness="1"
                    BorderBrush="Black">
                <Grid Name="HelpBoxGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{Binding HelpBoxTopHeight}"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="{Binding HelpBoxMiddleHeight}"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="{Binding HelpBoxBottomHeight}"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding HelpBoxLeftWidth}"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="{Binding HelpBoxCenterWidth}"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="{Binding HelpBoxRightWidth}"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="2" Grid.Column="2"
                            Background="DarkGray"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>

                    <!-- GridSplitters must be the last children added to the Grid -->
                    <GridSplitter Grid.Row="1" Grid.Column="2"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Background="Black"
                                  Height="3"
                                  Name="TopGridSplitter"
                                  DragCompleted="TopGridSplitterDragCompleted"/>
                    <GridSplitter Grid.Row="2" Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch"
                                  Background="Black"
                                  Width="3"
                                  Name="LeftGridSplitter"
                                  DragCompleted="LeftGridSplitterDragCompleted"/>
                    <GridSplitter Grid.Row="2" Grid.Column="3"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Stretch"
                                  Background="Black"
                                  Width="3"
                                  Name="RightGridSplitter"
                                  DragCompleted="RightGridSplitterDragCompleted"/>
                    <GridSplitter Grid.Row="3" Grid.Column="2"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Background="Black"
                                  Height="3"
                                  Name="BottomGridSplitter"
                                  DragCompleted="BottomGridSplitterDragCompleted"/>
                </Grid>
            </Border>
            <xctk:DecimalUpDown Grid.Row="6" Grid.Column="5"
                                Value="{Binding HelpBoxRight}" 
                                Maximum="1"
                                Minimum="0"
                                Increment="0.01"
                                AllowSpin="True"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"/>
            <xctk:DecimalUpDown Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="2"
                                Value="{Binding HelpBoxBottom}" 
                                Maximum="1"
                                Minimum="0"
                                Increment="0.01"
                                AllowSpin="True"
                                FontSize="10"
                                HorizontalAlignment="Center"/>


            <Label Grid.Row="0" Grid.Column="2"
                   Padding="20 0"
                   FontSize="10"
                   HorizontalAlignment="Right"/>

            <Label Grid.Row="0" Grid.Column="5"
                   Padding="20 0"
                   FontSize="10"
                   HorizontalAlignment="Right"/>

            <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="8" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Reset to Defaults"
                                Command="{Binding DefaultsCommand}"
                                Margin="16,4,4,4"/>

                <Button Content="Load Settings"
                                Command="{Binding LoadCommand}"
                                Margin="16,4,4,4"/>

                <Button Content="Save Settings"
                                Command="{Binding SaveCommand}"
                                Margin="16,4,4,4"/>
            </StackPanel>
        </Grid>
    </GroupBox>
</mah:MetroTabItem>
